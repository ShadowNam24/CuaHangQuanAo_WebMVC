<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CuaHangQuanAo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CuaHangQuanAo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <!-- sticky + shadow -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-red sticky-top shadow-sm">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img class="logo me-2" src="~/Images/demo/logo.svg" onerror="this.style.display='none';" alt="logo">
                    <span class="fw-bold">CuaHangQuanAo</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- Search -->
                    <form class="d-flex mx-lg-auto my-2 my-lg-0 search-bar" asp-controller="Product" asp-action="QuanAo" method="get">
                        <div class="input-group">
                            <input class="form-control" name="Q" type="search" placeholder="Bạn cần tìm gì?" aria-label="Search">
                            <button class="input-group-text bg-white border-start-0" type="submit" title="Tìm kiếm">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Nav items -->
                    <ul class="navbar-nav ms-auto align-items-lg-center">

                        <!-- Áo -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="aoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Áo
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <!-- Thay CategoryId cho khớp DB của bạn -->
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="7">Áo thun</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="5">Áo sơ mi</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="4">Áo polo</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-q="áo khoác">Áo khoác</a></li>
                            </ul>
                        </li>

                        <!-- Quần -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="quanDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Quần
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-q="jeans">Quần jeans</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-q="short">Quần short</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="3">Quần tây</a></li>
                            </ul>
                        </li>

                        <!-- Giày -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="giayDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Giày
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="8">Giày da</a></li>
                            </ul>
                        </li>

                        <!-- Thắt lưng -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="thaclungDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thắt lưng
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="9">Thắt lưng</a></li>
                            </ul>
                        </li>

                        <!-- Suit -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="suitDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Suit
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="2">Suit luxury</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="QuanAo" asp-route-CategoryId="1">BST Vest</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Order" asp-action="Lookup"><i class="bi bi-box"></i> Tra cứu đơn hàng</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index"><i class="bi bi-cart"></i> Giỏ hàng</a>
                        </li>

                        <!-- Auth buttons -->
                        @if(User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <!-- Nơi để mấy con gà thêm dropdown item cho profile và lịch sử mua hàng-->
                                    <li><form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">Đăng xuất</button>
                                    </form></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                        <li class="nav-item ms-lg-2">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-outline-light rounded-pill px-3 me-2">Signup</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-warning rounded-pill px-3">Login</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="footer-main">
            <div class="footer-columns">
                <div class="footer-col">
                    <h4>CuaHangQuanAo</h4>
                    <ul>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>CHÍNH SÁCH</h4>
                    <ul>
                        <li><a href="#">Chính sách bảo hành</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>THÔNG TIN</h4>
                    <ul>
                        <li><a href="#">Hướng dẫn mua hàng</a></li>
                        <li><a href="#">Hướng dẫn thanh toán</a></li>
                        <li><a href="#">Hướng dẫn trả góp</a></li>
                        <li><a href="#">Tra cứu địa chỉ bảo hành</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
