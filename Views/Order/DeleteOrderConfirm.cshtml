@model CuaHangQuanAo.Entities.Order
@{
    ViewData["Title"] = "Xóa đơn hàng";
    Layout = "_AdminLayout";
}
<div class="container py-3">
    <div class="orders-card p-3">
        <h5 class="mb-3"><i class="bi bi-exclamation-octagon text-danger me-2"></i>Xác nhận xóa đơn hàng</h5>
        <p>Bạn có chắc chắn muốn xóa đơn hàng <strong>#@Model.OrdersId</strong> của khách hàng
            <strong>@(Model.CustomerName ?? (Model.Customer != null ? (Model.Customer.LastName + " " + Model.Customer.FirstName).Trim() : "Không rõ"))</strong>?</p>

        <div class="d-flex justify-content-end gap-2">
            <a href="@Url.Action("Index","Order")" class="btn btn-outline-secondary btn-action">
                <i class="bi bi-x-circle me-1"></i>Không
            </a>
            <form asp-action="Functions_DeleteConfirmed" asp-controller="Order" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.OrdersId" />
                <button type="submit" class="btn btn-danger btn-action">
                    <i class="bi bi-check2-circle me-1"></i>Có, xóa ngay
                </button>
            </form>
        </div>
    </div>
</div>