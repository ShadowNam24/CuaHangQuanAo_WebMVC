@model CuaHangQuanAo.Entities.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_AdminLayout";
}

<style>
    .details-container {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .details-header {
        background: linear-gradient(135deg, #4B0082 0%, #9370DB 100%);
        color: white;
        border-radius: 0.8rem 0.8rem 0 0;
        padding: 1.5rem;
    }

    .info-section {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }

    .info-label {
        color: #6c757d;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-weight: 500;
        font-size: 1.1rem;
    }

    .badge-order {
        background: linear-gradient(135deg, #4B0082 0%, #9370DB 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
    }

    .item-details {
        border-left: 4px solid #4B0082;
        padding-left: 1rem;
    }

    .btn-action {
        border-radius: 50px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .table-products {
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .table-products th {
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.9rem;
        }

    .product-name {
        font-weight: 500;
    }

    .product-quantity {
        background-color: #e9ecef;
        border-radius: 4px;
        padding: 0.2rem 0.6rem;
        font-weight: 500;
    }

    .total-row {
        font-weight: 700;
        font-size: 1.1rem;
    }

    .discount-badge {
        background-color: #fff3cd;
        color: #856404;
        border-radius: 50px;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
    }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Danh sách đơn hàng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chi tiết đơn hàng #@Model.OrdersId</li>
        </ol>
    </nav>

    <div class="details-container">
        <div class="details-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="bi bi-receipt me-2"></i>Chi tiết đơn hàng
                    </h2>
                    <p class="mb-0 text-white-50">Thông tin đơn hàng #@Model.OrdersId</p>
                </div>
                <div class="d-flex">
                    <button class="btn btn-light btn-action" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i> Xóa
                    </button>
                </div>
            </div>
        </div>

        <div class="p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-section">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-person-circle me-2 text-primary"></i>
                            Thông tin khách hàng
                        </h5>

                        <div class="mb-3">
                            <div class="info-label">Tên khách hàng</div>
                            <div class="info-value">
                                @(Model.Customer != null
                                                                ? (Model.Customer.LastName + " " + Model.Customer.FirstName).Trim()
                                                                : "Chưa có thông tin")
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="info-label">Số điện thoại</div>
                            <div class="info-value">
                                <i class="bi bi-telephone me-1 text-primary"></i>
                                @(Model.Customer?.PhoneNumber ?? "Chưa có thông tin")
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="info-label">Địa chỉ</div>
                            <div class="info-value">
                                <i class="bi bi-geo-alt me-1 text-primary"></i>
                                @(Model.Customer?.AddressName ?? "Chưa có thông tin")
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="info-label">Email</div>
                            <div class="info-value">
                                <i class="bi bi-envelope me-1 text-primary"></i>
                                Chưa có thông tin
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-section">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-card-heading me-2 text-primary"></i>
                            Thông tin đơn hàng
                        </h5>

                        <div class="mb-3">
                            <div class="info-label">Mã đơn hàng</div>
                            <div class="info-value">#@Model.OrdersId</div>
                        </div>

                        <div class="mb-3">
                            <div class="info-label">Ngày tạo</div>
                            <div class="info-value">
                                <i class="bi bi-calendar2-check me-1 text-primary"></i>
                                @Model.OrderDate?.ToString("dd/MM/yyyy")
                            </div>
                        </div>



                        @if (Model.Discount.HasValue && Model.Discount.Value > 0)
                        {
                            <div class="mb-3">
                                <div class="info-label">Giảm giá</div>
                                <div class="info-value">
                                    <span class="discount-badge">@string.Format("{0:0.##}%", Model.Discount)</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-cart-check me-2 text-primary"></i>
                        Chi tiết sản phẩm
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-products mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Sản phẩm</th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrdersDetails != null && Model.OrdersDetails.Any())
                                {
                                    int stt = 1;
                                    decimal subtotal = 0;

                                    foreach (var item in Model.OrdersDetails)
                                    {
                                        decimal itemTotal = (item.Price ?? 0) * (item.Quantity ?? 0);
                                        subtotal += itemTotal;

                                        <tr>
                                            <td>@stt</td>
                                            <td>
                                                <div class="product-name">@(item.Items?.ItemsName ?? "Chưa có thông tin")</div>
                                                @if (!string.IsNullOrEmpty(item.Items?.Size))
                                                {
                                                    <small class="text-muted">Size: @item.Items.Size</small>
                                                }
                                            </td>
                                            <td>@string.Format("{0:N0} đ", item.Price)</td>
                                            <td><span class="product-quantity">@item.Quantity</span></td>
                                            <td class="fw-bold">@string.Format("{0:N0} đ", itemTotal)</td>
                                        </tr>
                                        stt++;
                                    }

                                    <tr class="bg-light">
                                        <td colspan="4" class="text-end">Tạm tính:</td>
                                        <td>@string.Format("{0:N0} đ", subtotal)</td>
                                    </tr>

                                    @if (Model.Discount.HasValue && Model.Discount.Value > 0)
                                    {
                                        <tr class="bg-light">
                                            <td colspan="4" class="text-end">Giảm giá (@string.Format("{0:0.##}%", Model.Discount)):</td>
                                            <td>@string.Format("{0:N0} đ", subtotal * (Model.Discount.Value / 100))</td>
                                        </tr>
                                    }

                                    <tr class="bg-light total-row">
                                        <td colspan="4" class="text-end">Tổng cộng:</td>
                                        <td class="text-primary">@string.Format("{0:N0} đ", Model.Total)</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-3">Không có thông tin sản phẩm</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="border-top pt-4 d-flex justify-content-between">
                <a href="@Url.Action("Index", "Order")" class="btn btn-outline-secondary btn-action">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                </a>
                <a href="@Url.Action("Functions_Edit", "Order", new { id = Model.OrdersId })" class="btn btn-primary btn-action">
                    <i class="bi bi-pencil-square me-1"></i> Sửa đơn hàng
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa đơn hàng -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa đơn hàng #@Model.OrdersId không?</p>
                <p class="text-danger"><strong>Lưu ý:</strong> Hành động này không thể hoàn tác và sẽ xóa tất cả thông tin liên quan.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form asp-action="Functions_DeleteConfirmed" asp-controller="Order" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.OrdersId" />
                    <button type="submit" class="btn btn-danger">Xóa đơn hàng</button>
                </form>
            </div>
        </div>
    </div>
</div>
