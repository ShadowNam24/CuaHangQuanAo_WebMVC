@model IEnumerable<CuaHangQuanAo.Entities.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .orders-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    
    .orders-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.2);
    }
    
    .orders-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }
    
    .orders-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }
    
    .orders-content {
        padding: 2rem;
    }
    
    .order-item {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }
    
    .order-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        background: white;
    }
    
    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .order-id {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2c3e50;
    }
    
    .order-date {
        color: #6c757d;
        font-size: 0.9rem;
    }
    
    .order-status {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }
    
    .status-pending {
        background: rgba(255, 193, 7, 0.1);
        color: #ffc107;
    }
    
    .status-completed {
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
    }
    
    .status-cancelled {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }
    
    .order-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }
    
    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .detail-item i {
        color: #667eea;
        font-size: 1.1rem;
        width: 20px;
    }
    
    .detail-label {
        font-weight: 600;
        color: #495057;
        margin-right: 0.5rem;
    }
    
    .detail-value {
        color: #6c757d;
    }
    
    .order-total {
        font-size: 1.3rem;
        font-weight: 700;
        color: #28a745;
        text-align: right;
    }
    
    .order-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 1rem;
    }
    
    .btn-details {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }
    
    .btn-details:hover {
        background: linear-gradient(45deg, #764ba2, #667eea);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        color: white;
        text-decoration: none;
    }
    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }
    
    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #dee2e6;
    }
    
    .empty-state h3 {
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .empty-state p {
        margin-bottom: 2rem;
    }
    
    .btn-shop {
        background: linear-gradient(45deg, #28a745, #218838);
        border: none;
        color: white;
        padding: 0.875rem 2rem;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-shop:hover {
        background: linear-gradient(45deg, #218838, #1e7e34);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        color: white;
        text-decoration: none;
    }
    
    @@media (max-width: 768px) {
        .orders-container {
            padding: 1rem 0;
        }
        
        .orders-header {
            padding: 1.5rem;
        }
        
        .orders-title {
            font-size: 1.5rem;
        }
        
        .order-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
        
        .order-details {
            grid-template-columns: 1fr;
        }
        
        .order-actions {
            justify-content: center;
        }
    }
</style>

<div class="orders-container">
    <div class="container">
        <div class="orders-card">
            <!-- Orders Header -->
            <div class="orders-header">
                <h1 class="orders-title">
                    <i class="bi bi-receipt me-3"></i>
                    Đơn hàng của tôi
                </h1>
            </div>
            
            <!-- Orders Content -->
            <div class="orders-content">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <div class="order-item">
                            <div class="order-header">
                                <div>
                                    <div class="order-id">Đơn hàng #@order.OrdersId</div>
                                    <div class="order-date">
                                        <i class="bi bi-calendar me-1"></i>
                                        @(order.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                    </div>
                                </div>
                                <div class="order-status @(order.Status?.ToLower() switch {
                                    "pending" => "status-pending",
                                    "completed" => "status-completed", 
                                    "cancelled" => "status-cancelled",
                                    _ => "status-pending"
                                })">
                                    @(order.Status ?? "Pending")
                                </div>
                            </div>
                            
                            <div class="order-details">
                                <div class="detail-item">
                                    <i class="bi bi-person"></i>
                                    <span class="detail-label">Khách hàng:</span>
                                    <span class="detail-value">@(order.CustomerName ?? "N/A")</span>
                                </div>
                                
                                <div class="detail-item">
                                    <i class="bi bi-telephone"></i>
                                    <span class="detail-label">SĐT:</span>
                                    <span class="detail-value">@(order.PhoneNumber ?? "N/A")</span>
                                </div>
                                
                                <div class="detail-item">
                                    <i class="bi bi-geo-alt"></i>
                                    <span class="detail-label">Địa chỉ:</span>
                                    <span class="detail-value">@(order.ShippingAddress ?? "N/A")</span>
                                </div>
                                
                                <div class="detail-item">
                                    <i class="bi bi-credit-card"></i>
                                    <span class="detail-label">Thanh toán:</span>
                                    <span class="detail-value">@(order.PaymentMethod ?? "COD")</span>
                                </div>
                            </div>
                            
                            @if (order.DiscountAmount > 0)
                            {
                                <div class="detail-item mb-2">
                                    <i class="bi bi-tag"></i>
                                    <span class="detail-label">Giảm giá:</span>
                                    <span class="detail-value text-success">-@(order.DiscountAmount?.ToString("N0") ?? "0") ₫ (@order.DiscountCode)</span>
                                </div>
                            }
                            
                            <div class="order-total">
                                Tổng tiền: @(order.Total?.ToString("N0") ?? order.TotalAmount?.ToString("N0") ?? "0") ₫
                            </div>
                            
                            <div class="order-actions">
                                <a href="@Url.Action("OrderDetail", "Profile", new { id = order.OrdersId })" class="btn-details">
                                    <i class="bi bi-eye"></i>
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h3>Chưa có đơn hàng nào</h3>
                        <p>Bạn chưa có đơn hàng nào. Hãy bắt đầu mua sắm ngay!</p>
                        <a href="@Url.Action("Index", "Product")" class="btn-shop">
                            <i class="bi bi-bag"></i>
                            Mua sắm ngay
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
