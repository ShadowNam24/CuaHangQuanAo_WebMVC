@model CuaHangQuanAo.Models.Profile
@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
    Layout = "_Layout";
}

@await Html.PartialAsync("_ProfileStyles")

<div class="edit-container">
    <div class="container">
        <div class="card-base edit-card">
            <!-- Edit Header -->
            <div class="edit-header">
                <h1 class="edit-title">
                    <i class="bi bi-pencil-square me-3"></i>
                    Chỉnh sửa thông tin cá nhân
                </h1>
            </div>

            <!-- Edit Form -->
            <div class="edit-content">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FullName" class="form-label">
                                    <i class="bi bi-person"></i>
                                    Họ và tên
                                </label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope"></i>
                                    Email
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="Nhập email" readonly />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">
                                    <i class="bi bi-telephone"></i>
                                    Số điện thoại
                                </label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address" class="form-label">
                                    <i class="bi bi-geo-alt"></i>
                                    Địa chỉ
                                </label>
                                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <button type="submit" class="btn-save">
                            <i class="bi bi-check-circle"></i>
                            Lưu thay đổi
                        </button>

                        <a href="@Url.Action("Index", "Profile")" class="btn-cancel btn-save" style="background:linear-gradient(45deg,#6c757d,#5a6268);">
                            <i class="bi bi-x-circle"></i>
                            Hủy bỏ
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
