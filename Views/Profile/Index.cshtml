@model CuaHangQuanAo.Models.Profile
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<style>
    .profile-container {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 30px;
        text-align: center;
    }

    .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        background: #ddd;
        display: block;
        margin: 0 auto 10px auto;
    }

    .profile-name {
        font-weight: 600;
        margin-bottom: 25px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 120px 1fr;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
        text-align: left;
    }

    .input, .select {
        width: 100%;
        padding: 9px 10px;
        border: 1px solid #cbd5e1;
        border-radius: 6px;
    }

    .radio-row {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .dob {
        display: flex;
        gap: 10px;
    }

    .btn {
        background: #dc2626;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 12px 20px;
        font-weight: 600;
        width: 100%;
    }

    .verify-link {
        margin-left: 10px;
        color: #2563eb;
        text-decoration: none;
    }

    .hint {
        color: green;
        margin-left: 10px;
        font-size: 14px;
    }

    .alert {
        padding: 10px;
        background: #ecfdf5;
        border: 1px solid #a7f3d0;
        color: #065f46;
        border-radius: 6px;
        margin-bottom: 16px;
        text-align: left;
    }
</style>

@if (TempData["saved"] != null)
{
    <div class="alert">✔ @TempData["saved"]</div>
}

<div class="profile-container">
    <img class="avatar" src="@Model.AvatarUrl" alt="avatar" />
    <div class="profile-name">@Model.FullName</div>

    <h3 style="text-align:left; margin-bottom:20px;">Thông tin tài khoản</h3>

    <form asp-action="Index" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-row">
            <label>Họ Tên</label>
            <input class="input" asp-for="FullName" />
        </div>

        <div class="form-row">
            <label>Giới tính</label>
            <div class="radio-row">
                <label><input type="radio" name="Gender" value="Nam" @(Model.Gender == "Nam" ? "checked" : "") /> Nam</label>
                <label><input type="radio" name="Gender" value="Nữ" @(Model.Gender == "Nữ" ? "checked" : "") /> Nữ</label>
            </div>
        </div>

        <div class="form-row">
            <label>Số điện thoại</label>
            <input class="input" asp-for="PhoneNumber" />
        </div>
        <div class="form-row">
            <label>Địa chỉ</label>
            <input class="input" asp-for="Address" />
        </div>

        <div class="form-row">
            <label>Ngày sinh</label>
            <div class="dob">
                <select class="select" asp-for="BirthDay">
                    <option value="">Ngày</option>
                    @for (int d = 1; d <= 31; d++)
                    {
                        <option value="@d">@d</option>
                    }
                </select>
                <select class="select" asp-for="BirthMonth">
                    <option value="">Tháng</option>
                    @for (int m = 1; m <= 12; m++)
                    {
                        <option value="@m">@m</option>
                    }
                </select>
                <select class="select" asp-for="BirthYear">
                    <option value="">Năm</option>
                    @for (int y = DateTime.Now.Year; y >= 1950; y--)
                    {
                        <option value="@y">@y</option>
                    }
                </select>
            </div>
        </div>

        <button type="submit" class="btn">LƯU THAY ĐỔI</button>
    </form>
</div>
