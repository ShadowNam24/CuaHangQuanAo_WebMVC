@model CuaHangQuanAo.Models.Profile
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "_Layout";
}

@await Html.PartialAsync("_ProfileStyles")

<div class="profile-container">
    <div class="container">
        <div class="card-base profile-card">
            <!-- Profile Header -->
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="bi bi-person-fill"></i>
                </div>
                <h1 class="profile-name">@Model.FullName</h1>
                <p class="profile-email">@Model.Email</p>
            </div>

            <!-- Profile Content -->
            <div class="profile-content">
                <!-- Personal Information -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="bi bi-person-lines-fill"></i>
                        Thông tin cá nhân
                    </h3>

                    <div class="info-item">
                        <i class="bi bi-person"></i>
                        <span class="info-label">Họ tên:</span>
                        <span class="info-value">@Model.FullName</span>
                    </div>

                    <div class="info-item">
                        <i class="bi bi-envelope"></i>
                        <span class="info-label">Email:</span>
                        <span class="info-value">@Model.Email</span>
                    </div>

                    <div class="info-item">
                        <i class="bi bi-telephone"></i>
                        <span class="info-label">Số điện thoại:</span>
                        <span class="info-value">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</span>
                    </div>

                    <div class="info-item">
                        <i class="bi bi-geo-alt"></i>
                        <span class="info-label">Địa chỉ:</span>
                        <span class="info-value">@(string.IsNullOrEmpty(Model.Address) ? "Chưa cập nhật" : Model.Address)</span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <a href="@Url.Action("Edit", "Profile")" class="btn-edit">
                        <i class="bi bi-pencil-square"></i>
                        Chỉnh sửa thông tin
                    </a>
                    <a href="@Url.Action("PaymentHistory", "Profile")" class="btn-orders">
                        <i class="bi bi-credit-card"></i>
                        Xem lịch sử thanh toán của tôi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
