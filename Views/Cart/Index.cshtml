@model List<CuaHangQuanAo.Models.CartItem>

<style>
    .btn-custom {
        background-color: #000;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }
    .btn-custom:hover {
        background-color: #ffc107;
        color: #000;
    }
</style>

<h2>Giỏ hàng</h2>

@if (!Model.Any())
{
    <div class="d-flex flex-column align-items-center justify-content-center py-5">
        <img src="~/Images/demo/empty.png"
             alt="Empty Cart" width="150" class="mb-4 opacity-75" />

        <h4 class="text-muted mb-3">Giỏ hàng của bạn đang trống</h4>

        <a href="/" class="btn btn-lg btn-custom shadow-sm px-4">
            <i class="bi bi-bag-plus"></i> Bắt đầu mua sắm
        </a>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Sản phẩm</th>
                <th>Size</th>
                <th>Màu</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var imgSrc = !string.IsNullOrEmpty(item.Image)
                    ? Url.Content("~/Images/" + item.Image)
                    : Url.Content("~/Images/no-image.png");
                <tr>
                    <td>
                        <img src="@imgSrc" class="p-3 object-fit-contain" alt="@item.ItemsName"
                             style="width:70px;max-height:70px"
                             onerror="this.onerror=null;this.src='@Url.Content("~/Images/no-image.png")'" />
                    </td>
                    <td>@item.ItemsName</td>
                    <td>@item.Size</td>
                    <td>@item.Color</td>
                    <td>
                        @if (item.VariantId.HasValue)
                        {
                            <div class="input-group" style="width: 120px;">
                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity(@item.VariantId, @(item.Quantity - 1))">-</button>
                                <input type="number" class="form-control form-control-sm text-center" value="@item.Quantity" min="1" max="@item.MaxQuantity" 
                                       onchange="updateQuantity(@item.VariantId, this.value)" id="qty-@item.VariantId">
                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity(@item.VariantId, @(item.Quantity + 1))">+</button>
                            </div>
                        }
                        else
                        {
                            @item.Quantity
                        }
                    </td>
                    <td>@item.SellPrice.ToString("N0") VNĐ</td>
                    <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                    <td>
                        @if (item.VariantId.HasValue)
                        {
                            <button type="button" class="btn btn-danger btn-sm" onclick="removeItem(@item.VariantId)">Xóa</button>
                        }
                        else
                        {
                            <a asp-action="Remove" asp-route-id="@item.ItemsId" asp-route-size="@item.Size" class="btn btn-danger btn-sm">Xóa</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Tổng cộng: @ViewBag.Total.ToString("N0") VNĐ</h3>

    <a asp-action="Clear" class="btn btn-warning">Xóa toàn bộ giỏ hàng</a>
    <form asp-action="CheckStock" asp-controller="Cart" method="post" style="display:inline;">
        <button type="submit" class="btn btn-success">Đặt Hàng</button>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
}

@section Scripts {
    <script>
        function updateQuantity(variantId, newQuantity) {
            if (newQuantity < 1) {
                newQuantity = 1;
            }
            
            $.post('/Cart/UpdateQuantity', {
                variantId: variantId,
                quantity: newQuantity,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            })
            .done(function(data) {
                if (data.success) {
                    // Update the input value
                    $('#qty-' + variantId).val(data.itemTotal);
                    
                    // Update cart count in header
                    if (typeof updateCartCount === 'function') {
                        updateCartCount(data.cartCount);
                    }
                    
                    // Reload page to show updated totals
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .fail(function() {
                alert('Có lỗi xảy ra khi cập nhật số lượng');
            });
        }
        
        function removeItem(variantId) {
            if (confirm('Bạn có chắc muốn xóa sản phẩm này khỏi giỏ hàng?')) {
                $.post('/Cart/RemoveItem', {
                    variantId: variantId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                })
                .done(function(data) {
                    if (data.success) {
                        // Update cart count in header
                        if (typeof updateCartCount === 'function') {
                            updateCartCount(data.cartCount);
                        }
                        
                        // Reload page to show updated cart
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .fail(function() {
                    alert('Có lỗi xảy ra khi xóa sản phẩm');
                });
            }
        }
    </script>
}
