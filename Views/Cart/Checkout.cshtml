@section Scripts {
    <!-- SweetAlert2 for beautiful popups -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=YOUR_CLIENT_ID&components=buttons&currency=USD"></script>
    
    <script>
        // Global variables
        let originalTotal = @cartTotal;
        let currentDiscount = 0;
        let appliedDiscountCode = '';
        
        document.addEventListener('DOMContentLoaded', function() {
            // Check if order was successful (from TempData)
            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Đặt hàng thành công! 🎉',
                    text: '@Html.Raw(TempData["Success"])',
                    icon: 'success',
                    confirmButtonText: 'Tuyệt vời!',
                    confirmButtonColor: '#28a745',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: true,
                    timer: 5000,
                    timerProgressBar: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect to home page or order history
                        window.location.href = '@Url.Action("Index", "Home")';
                    }
                });
                </text>
            }
            
            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Đặt hàng thất bại! ❌',
                    text: '@Html.Raw(TempData["Error"])',
                    icon: 'error',
                    confirmButtonText: 'Thử lại',
                    confirmButtonColor: '#dc3545'
                });
                </text>
            }
            
            // Form submission with enhanced UX
            const checkoutForm = document.getElementById('checkoutForm');
            const checkoutBtn = document.getElementById('btnCheckout');
            
            if (checkoutForm) {
                console.log("Checkout form found, adding event listener");
                checkoutForm.addEventListener("submit", function (e) {
                    console.log("Form submit event triggered");
                    e.preventDefault(); // Prevent default form submission
                    
                    // Show beautiful confirmation popup
                    Swal.fire({
                        title: 'Xác nhận đặt hàng',
                        text: 'Bạn có chắc chắn muốn đặt hàng không?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        cancelButtonColor: '#dc3545',
                        confirmButtonText: 'Có, đặt hàng!',
                        cancelButtonText: 'Hủy bỏ',
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            console.log("User confirmed order, submitting form");
                            // Show loading state
                            checkoutBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Đang xử lý...';
                            checkoutBtn.disabled = true;
                            
                            // Submit form
                            checkoutForm.submit();
                        } else {
                            console.log("User cancelled order");
                        }
                    });
                });
            } else {
                console.log("Checkout form not found!");
            }

            function syncPaypalForm() {
            const f = document.getElementById('checkoutForm');
            const pf = document.getElementById('paypalForm');
            const get = name => f?.querySelector(`[name="${name}"]`)?.value || '';

            pf.querySelector('[name="CustomerName"]').value = get('CustomerName');
            pf.querySelector('[name="Phone"]').value = get('Phone');
            pf.querySelector('[name="Address"]').value = get('Address');

            pf.querySelector('#ppDiscountCode').value = document.getElementById('appliedDiscountCode').value || '';
            pf.querySelector('#ppDiscountAmount').value = document.getElementById('appliedDiscountAmount').value || 0;
            pf.querySelector('#ppDiscountDescription').value = document.getElementById('appliedDiscountDescription').value || '';
        }

        // Fallback button click
        document.getElementById('paypalFallbackBtn')?.addEventListener('click', function () {
            syncPaypalForm();
        });

        // If JS SDK loaded, render official button and submit the server form
        if (window.paypal && document.getElementById('paypal-sdk-container')) {
            paypal.Buttons({
                style: {
                    layout: 'horizontal',
                    color: 'gold', // gold | blue | silver | black
                    shape: 'pill', // pill | rect
                    label: 'paypal',
                    height: 40
                },
                onClick: function () {
                    syncPaypalForm();
                    // Delegate to server-side CreatePayment (keeps your current redirect flow)
                    document.getElementById('paypalForm').requestSubmit();
                    // Prevent the SDK from starting its own flow
                    return paypal.Actions.reject();
                }
            }).render('#paypal-sdk-container');
        }
            
            // Add smooth animations to form elements
            const formControls = document.querySelectorAll('.form-control');
            formControls.forEach(control => {
                control.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                control.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
            
            // Add hover effects to cart items
            const cartItems = document.querySelectorAll('.cart-item');
            cartItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Allow Enter key to apply discount
            document.getElementById('discountCode').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    applyDiscount();
                }
            });
        });
        
        function applyDiscount() {
            const discountCode = document.getElementById('discountCode').value.trim();
            const discountInfo = document.getElementById('discountInfo');
            const discountDescription = document.getElementById('discountDescription');
            const discountAmount = document.getElementById('discountAmount');
            const discountRow = document.getElementById('discountRow');
            const discountValue = document.getElementById('discountValue');
            const totalAmount = document.getElementById('totalAmount');
            
            if (!discountCode) {
                showToast('Vui lòng nhập mã giảm giá!', 'warning');
                return;
            }
            
            // Make AJAX call to server
            fetch('@Url.Action("ApplyDiscountCode", "Cart")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: `discountCode=${encodeURIComponent(discountCode)}&currentTotal=${originalTotal}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    appliedDiscountCode = discountCode;
                    currentDiscount = data.discountAmount;
                    
                    // Update UI
                    discountDescription.textContent = data.description;
                    discountAmount.textContent = `-${data.discountAmount.toLocaleString('vi-VN')} ₫`;
                    discountValue.textContent = `-${data.discountAmount.toLocaleString('vi-VN')} ₫`;
                    
                    // Show discount info
                    discountInfo.style.display = 'block';
                    discountRow.style.display = 'flex';
                    
                    // Update total
                    const newTotal = originalTotal - data.discountAmount;
                    totalAmount.textContent = `${newTotal.toLocaleString('vi-VN')} ₫`;
                    
                    // Update hidden fields
                    document.getElementById('appliedDiscountCode').value = discountCode;
                    document.getElementById('appliedDiscountAmount').value = data.discountAmount;
                    document.getElementById('appliedDiscountDescription').value = data.description;
                    
                    // Clear input
                    document.getElementById('discountCode').value = '';
                    
                    showToast(data.message, 'success');
                } else {
                    showToast(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Đã xảy ra lỗi khi áp dụng mã giảm giá!', 'error');
            });
        }
        
        function removeDiscount() {
            // Reset discount
            currentDiscount = 0;
            appliedDiscountCode = '';
            
            // Hide discount info
            document.getElementById('discountInfo').style.display = 'none';
            document.getElementById('discountRow').style.display = 'none';
            
            // Reset total
            document.getElementById('totalAmount').textContent = `${originalTotal.toLocaleString('vi-VN')} ₫`;
            
            // Clear hidden fields
            document.getElementById('appliedDiscountCode').value = '';
            document.getElementById('appliedDiscountAmount').value = '';
            document.getElementById('appliedDiscountDescription').value = '';
            
            showToast('Đã xóa mã giảm giá!', 'info');
        }
        
        function showToast(message, type) {
            // Use SweetAlert2 for better UX
            const icon = type === 'error' ? 'error' : type === 'warning' ? 'warning' : type === 'success' ? 'success' : 'info';
            const title = type === 'error' ? 'Lỗi!' : type === 'warning' ? 'Cảnh báo!' : type === 'success' ? 'Thành công!' : 'Thông báo!';
            
            Swal.fire({
                title: title,
                text: message,
                icon: icon,
                confirmButtonText: 'OK',
                confirmButtonColor: type === 'error' ? '#dc3545' : type === 'warning' ? '#ffc107' : type === 'success' ? '#28a745' : '#17a2b8',
                timer: 3000,
                timerProgressBar: true,
                showConfirmButton: true
            });
        }
    </script>

    
}

@* Thêm prefill client-side để đồng bộ lại nếu user sửa *@
<script>
document.addEventListener('DOMContentLoaded', () => {
    const name = document.querySelector('input[name="CustomerName"]');
    const phone = document.querySelector('input[name="Phone"]');
    const address = document.querySelector('input[name="Address"]');

    // Nếu server đã gán (Model có giá trị) thì giữ nguyên, nếu trống thử lấy từ localStorage (tùy chọn)
    if (!name.value && localStorage.getItem('profile_fullName'))
        name.value = localStorage.getItem('profile_fullName');
    if (!phone.value && localStorage.getItem('profile_phone'))
        phone.value = localStorage.getItem('profile_phone');
    if (!address.value && localStorage.getItem('profile_address'))
        address.value = localStorage.getItem('profile_address');

    // Sau khi submit (PayPal hoặc COD) lưu lại
    document.getElementById('checkoutForm')?.addEventListener('submit', () => {
        localStorage.setItem('profile_fullName', name.value);
        localStorage.setItem('profile_phone', phone.value);
        localStorage.setItem('profile_address', address.value);
    });
    document.getElementById('paypalForm')?.addEventListener('submit', () => {
        localStorage.setItem('profile_fullName', name.value);
        localStorage.setItem('profile_phone', phone.value);
        localStorage.setItem('profile_address', address.value);
    });
});
</script>