@model CuaHangQuanAo.Models.CheckoutVm
@{
    ViewBag.Title = "Thanh toán";
    var cartItems = ViewBag.CartItems as List<CuaHangQuanAo.Models.CartItem>;
    var cartTotal = ViewBag.Total as decimal? ?? 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* Import Google Fonts */
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
    
    * {
        font-family: 'Inter', sans-serif;
    }
    
    .checkout-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    
    .checkout-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 25px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.2);
        animation: slideInUp 0.8s ease-out;
    }
    
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .checkout-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }
    
    .checkout-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .checkout-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-top: 0.5rem;
    }
    
    .cart-items-section {
        padding: 2rem;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .section-title i {
        color: #667eea;
        font-size: 1.3rem;
    }
    
    .cart-item {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }
    
    .cart-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }
    
    .item-image {
        width: 100px;
        height: 100px;
        object-fit: contain;
        border-radius: 15px;
        background: #f8f9fa;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    
    .item-image:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .item-details h6 {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }
    
    .item-variant {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .item-variant i {
        color: #667eea;
        font-size: 0.8rem;
    }
    
    .item-price {
        font-weight: 700;
        color: #28a745;
        font-size: 1.1rem;
    }
    
    .quantity-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-block;
    }
    
    .form-section {
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .form-label i {
        color: #667eea;
        font-size: 1.1rem;
    }
    
    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 15px;
        padding: 0.875rem 1.25rem;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: rgba(255,255,255,0.9);
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        outline: none;
        background: white;
    }
    
    .form-control:hover {
        border-color: #667eea;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .discount-section {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin: 2rem 0;
    }
    
    .discount-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }
    
    .discount-input-group {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
    }
    
    .discount-input {
        flex: 1;
        border: 2px solid rgba(255,255,255,0.3);
        border-radius: 15px;
        padding: 0.875rem 1.25rem;
        font-size: 1rem;
        font-weight: 500;
        background: rgba(255,255,255,0.9);
        color: #2c3e50;
    }
    
    .discount-input:focus {
        outline: none;
        border-color: white;
        background: white;
        box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
    }
    
    .discount-btn {
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.3);
        color: white;
        padding: 0.875rem 2rem;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .discount-btn:hover {
        background: rgba(255,255,255,0.3);
        transform: translateY(-2px);
    }
    
    .discount-info {
        background: rgba(255,255,255,0.1);
        border-radius: 15px;
        padding: 1rem;
        margin-top: 1rem;
        display: none;
    }
    
    .discount-applied {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .remove-discount {
        background: rgba(220, 53, 69, 0.8);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .remove-discount:hover {
        background: rgba(220, 53, 69, 1);
        transform: translateY(-1px);
    }
    
    .summary-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin-top: 2rem;
    }
    
    .summary-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    
    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255,255,255,0.2);
    }
    
    .summary-row:last-child {
        border-bottom: none;
        font-weight: 700;
        font-size: 1.2rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 2px solid rgba(255,255,255,0.3);
    }
    
    .summary-label {
        font-weight: 500;
    }
    
    .summary-value {
        font-weight: 600;
        color: white;
    }
    
    .checkout-btn {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        border-radius: 25px;
        padding: 1.25rem 3rem;
        font-size: 1.2rem;
        font-weight: 700;
        color: white;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        width: 100%;
        margin-top: 2rem;
        box-shadow: 0 8px 30px rgba(40, 167, 69, 0.3);
    }
    
    .checkout-btn:hover {
        background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(40, 167, 69, 0.4);
    }
    
    .empty-cart {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }
    
    .empty-cart i {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #dee2e6;
    }
    
    .empty-cart h3 {
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    /* VNPAY Button Styles - Designed to match official VNPAY appearance */
    .vnpay-btn {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        background: linear-gradient(135deg, #1E88E5 0%, #1565C0 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
        margin-top: 1rem;
        box-shadow: 0 4px 20px rgba(30, 136, 229, 0.3);
        position: relative;
        overflow: hidden;
        min-height: 60px;
        bottom: 15px;
    }

    .vnpay-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
        transition: left 0.6s;
    }

    .vnpay-btn:hover::before {
        left: 100%;
    }

    .vnpay-btn:hover {
        background: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(30, 136, 229, 0.4);
    }

    .vnpay-btn:active {
        transform: translateY(0);
        box-shadow: 0 4px 15px rgba(30, 136, 229, 0.3);
    }

    .vnpay-logo {
        flex-shrink: 0;
        display: flex;
        align-items: center;
    }

    .vnpay-content {
        flex: 1;
        text-align: left;
        line-height: 1.3;
    }

    .vnpay-label {
        display: block;
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        margin-bottom: 2px;
    }

    .vnpay-sublabel {
        display: block;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.85);
        font-weight: 400;
    }

    .vnpay-secure {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2px;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .vnpay-secure i {
        font-size: 1.2rem;
    }

    .vnpay-secure span {
        font-weight: 500;
    }

    /* Loading state for VNPAY button */
    .vnpay-btn:disabled {
        background: linear-gradient(135deg, #90CAF9 0%, #64B5F6 100%);
        cursor: not-allowed;
        transform: none;
        box-shadow: 0 2px 10px rgba(30, 136, 229, 0.2);
    }

    .vnpay-btn:disabled::before {
        display: none;
    }

    /* Payment Buttons Container - Side by Side Layout */
    .payment-buttons-container {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        align-items: stretch;
    }

    .payment-form {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    /* Unified Payment Button Styles - Exactly matching */
    .payment-btn {
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        gap: 0.5rem !important;
        border: none !important;
        border-radius: 25px !important; /* Rounded corners like main button */
        padding: 0.875rem 1.5rem !important; /* Same as main button */
        font-weight: 700 !important;
        font-size: 1rem !important; /* Same as main button */
        letter-spacing: 0.2px !important;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2) !important;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
        width: 100% !important;
        text-decoration: none !important;
        cursor: pointer !important;
        text-transform: uppercase !important;
        min-height: 60px !important; /* Same height */
        position: relative !important;
        overflow: hidden !important;
    }

    .payment-btn:hover {
        transform: translateY(-3px) !important; /* Same hover effect as main button */
        box-shadow: 0 8px 25px rgba(0,0,0,0.3) !important;
        text-decoration: none !important;
    }

    .payment-btn:active {
        transform: translateY(-1px) !important;
    }

    /* PayPal specific colors - matching main button style */
    .paypal-btn.payment-btn {
        background: linear-gradient(135deg, #ffc439 0%, #ffb700 100%) !important;
        color: #111 !important;
    }

    .paypal-btn.payment-btn:hover {
        background: linear-gradient(135deg, #ffb700 0%, #ffc439 100%) !important;
        color: #111 !important;
    }

    /* VNPAY specific colors - matching main button style */
    .vnpay-btn.payment-btn {
        background: linear-gradient(135deg, #1E88E5 0%, #1565C0 100%) !important;
        color: white !important;
    }

    .vnpay-btn.payment-btn:hover {
        background: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%) !important;
        color: white !important;
    }

    /* Payment mark and label styles */
    .payment-mark {
        display: inline-flex !important;
        align-items: center !important;
        flex-shrink: 0 !important;
    }

    .payment-label {
        line-height: 1 !important;
        white-space: nowrap !important;
        font-weight: 700 !important;
        margin-left: 0.5rem !important;
    }

    /* Override any conflicting styles */
    .vnpay-btn.payment-btn .vnpay-logo,
    .vnpay-btn.payment-btn .vnpay-content,
    .vnpay-btn.payment-btn .vnpay-secure {
        display: none !important;
    }

    /* Loading states */
    .payment-btn:disabled {
        opacity: 0.6 !important;
        cursor: not-allowed !important;
        transform: none !important;
    }

    /* Responsive Design */
    

   

    /* Remove old conflicting styles */
    .vnpay-btn:not(.payment-btn) {
        display: none !important;
    }
</style>

<div class="checkout-container">
    <div class="container">
        <div class="checkout-card">
            <!-- Header -->
            <div class="checkout-header">
                <h1 class="checkout-title">
                    <i class="bi bi-cart-check me-3"></i>
                    Thanh toán đơn hàng
                </h1>
                <p class="checkout-subtitle">Hoàn tất đơn hàng của bạn một cách dễ dàng và an toàn</p>
            </div>

@if (cartItems != null && cartItems.Any())
{
                <!-- Cart Items Section -->
                <div class="cart-items-section">
                    <h3 class="section-title">
                        <i class="bi bi-bag"></i>
                        Sản phẩm trong giỏ hàng
                    </h3>
                    
            @foreach (var item in cartItems)
            {
                var imgSrc = !string.IsNullOrEmpty(item.Image)
                            ? Url.Content("~/Images/products/" + item.Image)
                    : Url.Content("~/Images/no-image.png");
                        
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="@imgSrc" class="item-image" alt="@item.ItemsName"
                             onerror="this.onerror=null;this.src='@Url.Content("~/Images/no-image.png")'" />
                                </div>
                                <div class="col-md-4">
                                    <div class="item-details">
                                        <h6>@item.ItemsName</h6>
                                        <div class="item-variant">
                                            <i class="bi bi-palette"></i>
                                            Màu: @item.Color
                                        </div>
                                        <div class="item-variant">
                                            <i class="bi bi-rulers"></i>
                                            Size: @item.Size
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <div class="quantity-badge">
                                        Số lượng: @item.Quantity
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="item-price">
                                        @item.TotalPrice.ToString("N0") ₫
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Discount Code Section -->
                <div class="discount-section">
                    <h3 class="discount-title">
                        <i class="bi bi-tag"></i>
                        Mã giảm giá
                    </h3>
                    
                    <div class="discount-input-group">
                        <input type="text" id="discountCode" class="discount-input" placeholder="Nhập mã giảm giá" />
                        <button type="button" class="discount-btn" onclick="applyDiscount()">
                            <i class="bi bi-check-circle me-2"></i>
                            Áp dụng
                        </button>
                    </div>
                    
                    <div id="discountInfo" class="discount-info">
                        <div class="discount-applied">
                            <div>
                                <strong id="discountDescription"></strong>
                                <div id="discountAmount" class="mt-1"></div>
                            </div>
                            <button type="button" class="remove-discount" onclick="removeDiscount()">
                                <i class="bi bi-x-circle me-1"></i>
                                Xóa
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Checkout Form -->
                <div class="form-section">
                <form asp-action="Checkout" method="post" id="checkoutForm">
                        <h3 class="section-title">
                            <i class="bi bi-person-lines-fill"></i>
                            Thông tin giao hàng
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6">
                <div class="form-group">
                                    <label class="form-label">
                                        <i class="bi bi-person"></i>
                                        Họ và tên
                                    </label>
                                    <input asp-for="CustomerName" class="form-control" placeholder="Nhập họ và tên" required />
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <i class="bi bi-telephone"></i>
                                        Số điện thoại
                                    </label>
                                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" required />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                </div>
                </div>
                        
                         <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-geo-alt"></i>
                                Địa chỉ giao hàng
                            </label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ giao hàng chi tiết" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                         </div>

                        <!-- Hidden fields for discount -->
                        <input type="hidden" id="appliedDiscountCode" name="DiscountCode" value="" />
                        <input type="hidden" id="appliedDiscountAmount" name="DiscountAmount" value="0" />
                        <input type="hidden" id="appliedDiscountDescription" name="DiscountDescription" value="" />

                        <!-- Order Summary -->
                        <div class="summary-section">
                            <h4 class="summary-title">
                                <i class="bi bi-calculator me-2"></i>
                                Tổng kết đơn hàng
                            </h4>
                            
                            <div class="summary-row">
                                <span class="summary-label">Tạm tính:</span>
                                <span class="summary-value" id="subtotal">@cartTotal.ToString("N0") ₫</span>
                            </div>
                            
                            <div class="summary-row" id="discountRow" style="display: none;">
                                <span class="summary-label">Giảm giá:</span>
                                <span class="summary-value" id="discountValue">-0 ₫</span>
                            </div>
                            
                            <div class="summary-row">
                                <span class="summary-label">Phí vận chuyển:</span>
                                <span class="summary-value">Miễn phí</span>
                            </div>
                            
                            <div class="summary-row">
                                    <span class="summary-label">Tổng cộng:</span>
                                    <span class="summary-value" id="totalAmount">@cartTotal.ToString("N0") ₫</span>
                                </div>
                            </div>

                        <button type="submit" class="checkout-btn" id="btnCheckout">
                            <i class="bi bi-credit-card me-2"></i>
                            Xác nhận đặt hàng
                        </button>
                    </form>

                    <!-- Payment Buttons Section - Side by Side Layout -->
                    <div class="payment-buttons-container">
                        <!-- PayPal Form -->
                        <form asp-controller="PayPal" asp-action="CreatePayment" method="post" id="paypalForm" class="payment-form">
                            <input type="hidden" name="total" value="@cartTotal" />
                            <input type="hidden" name="CustomerName" />
                            <input type="hidden" name="Phone" />
                            <input type="hidden" name="Address" />
                            <input type="hidden" name="DiscountCode" id="ppDiscountCode" />
                            <input type="hidden" name="DiscountAmount" id="ppDiscountAmount" />
                            <input type="hidden" name="DiscountDescription" id="ppDiscountDescription" />

                            <!-- PayPal button with matching styles -->
                            <button type="submit" id="paypalFallbackBtn" class="payment-btn paypal-btn" aria-label="Thanh toán bằng PayPal">
                                <span class="payment-mark" aria-hidden="true">
                                    <!-- Inline SVG PayPal mark -->
                                    <svg width="24" height="24" viewBox="0 0 24 24" focusable="false" xmlns="http://www.w3.org/2000/svg">
                                        <path fill="#003087" d="M7.1,20.2l.7-4.2h2.5c3.8,0,6.9-2.7,7.6-6.3c.5-2.8-1.7-5.2-4.6-5.2H6.5c-.4,0-.7.3-.8.6L3,20.2c-.1.4.2.8.6.8h3c.3,0,.6-.2.7-.5l.1-.3h-.3Z"></path>
                                        <path fill="#009CDE" d="M9.3,20.2l.9-5.5h2.4c2.1,0,3.9-.8,5-2c-.6,3.6-3.7,6.3-7.6,6.3h-2.5l-.7,4.2h2.4c.3,0,.6-.2.7-.5l.1-.3h-.3Z"></path>
                                    </svg>
                                </span>
                                <span class="payment-label">Thanh toán bằng PayPal</span>
                            </button>

                            <!-- Optional: Render the official PayPal JS button -->
                            <div id="paypal-sdk-container" class="mt-2"></div>
