        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 16px 48px;
        font-size: 1.1rem;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(44,62,80,0.10);
        cursor: pointer;
        margin-top: 16px;
        transition: background 0.3s;
    }

        .promo-btn:hover {
            background: #e67e22;
            color: #fff;
        }

    .promo-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .promo-img-box {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(44,62,80,0.18);
        padding: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 420px;
        height: 520px;
        max-width: 100%;
        max-height: 100%;
    }

    .promo-img {
        width: 100%;
        height: 100%;
        max-width: 420px;
        max-height: 520px;
        border-radius: 8px;
        object-fit: cover;
        display: block;
    }

    @@media (max-width: 900px) {
        .promo-section {
            flex-direction: column;
            gap: 24px;
        }

        .promo-right {
            justify-content: flex-start;
        }

        .promo-img {
            max-width: 220px;
        }

        .promo-left {
            padding: 32px 8px;
        }
    }

    .product-btn, .product-btn:visited, .product-btn:hover, .product-btn:active {
        text-decoration: none;
    }
</style>

