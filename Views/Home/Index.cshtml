@model CuaHangQuanAo.Entities.HomeIndexVm
@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- SEARCH AJAX (trang chủ) -->


<style>
    .fashion-hero {
        background-size: cover;
        color: #fff;
        padding: 80px 0;
        text-align: center;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(44, 62, 80, 0.12);
        margin-bottom: 40px;
        height: 550px;
    }

    #fashion-hero-carousel {
        background: linear-gradient(135deg, #FFFFFF 40%, #808080 100%);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(44, 62, 80, 0.12);
        margin-bottom: 40px;
        padding-top: 16px;
        padding-bottom: 16px;
    }

        #fashion-hero-carousel .carousel-item {
            min-height: 500px;
        }

        #fashion-hero-carousel h1, #fashion-hero-carousel p {
            animation: fadeInUp 1s ease;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .title {
        font-size: 1.6rem;
        font-weight: 700;
        text-align: center;
        margin: 48px auto 24px auto;
        letter-spacing: 1px;
        color: #000;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(44,62,80,.12);
        padding: 12px 0;
        max-width: 700px;
        width: 100%;
    }

        .title::after {
            content: "";
            display: block;
            width: 100px;
            height: 3px;
            background: #000;
            margin: 5px auto 0;
            border-radius: 2px;
            opacity: .7;
        }

    .products {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
        gap: 32px;
        max-width: 1100px;
        margin: auto;
    }

    .product-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(44,62,80,.08);
        padding: 24px;
        text-align: center;
        transition: transform .3s, box-shadow .3s;
        position: relative;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 8px 32px rgba(44,62,80,.16);
        }

    .product-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        margin-bottom: 16px;
        border-radius: 8px;
    }

    .product-title {
        font-size: 1.15rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: #222;
    }

    .product-price {
        color: #e67e22;
        font-size: 1.05rem;
        font-weight: 700;
        margin-bottom: 12px;
    }

    .product-btn {
        background: #222;
        color: #fff;
        padding: 10px 24px;
        border: none;
        border-radius: 50px;
        font-size: .95rem;
        cursor: pointer;
        transition: all .3s;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(44,62,80,.08);
        text-decoration: none;
        display: inline-block;
    }

        .product-btn:hover {
            background: #e67e22;
            color: #fff;
            transform: scale(1.08);
        }

    .promo-section {
        display: flex;
        align-items: stretch;
        justify-content: center;
        gap: 32px;
        margin: 48px 0;
    }

    .promo-left {
        background: url('/Images/demo/bg-fashion.jpg') center center no-repeat;
        flex: 2;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(44,62,80,.10);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 48px 24px;
        position: relative;
        min-height: 420px;
    }

    .promo-overlay {
        position: absolute;
        inset: 0;
        background: rgba(34,34,34,.7);
        border-radius: 12px;
        z-index: 1;
    }

    .promo-content {
        position: relative;
        z-index: 2;
        color: #fff;
        text-align: center;
        width: 100%;
    }

    .promo-title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 16px;
        letter-spacing: 2px;
    }

    .promo-desc {
        font-size: 1.2rem;
        margin-bottom: 32px;
        font-weight: 500;
    }

    .promo-btn {
        background: #222;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 16px 48px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        text-decoration: none;
    }

        .promo-btn:hover {
            background: #e67e22;
            color: #fff;
        }

    .promo-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .promo-img-box {
        width: 100%;
        max-width: 420px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 24px rgba(44,62,80,.18);
    }

        .promo-img-box img {
            width: 100%;
            height: auto;
            display: block;
        }
</style>

<!-- Carousel -->
<div id="fashion-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container">
                <div class="row align-items-center p-5">
                    <div class="col-lg-6">
                        <h1 class="display-4 fw-bold text-success">Welcome to My World</h1>
                        <p class="lead">Discover the latest trends and timeless styles.</p>
                        <!-- Chỉ còn 2 nút -->
                        <div class="d-flex flex-wrap gap-2">
                            <a class="btn btn-success btn-lg" asp-controller="Product" asp-action="QuanAo">Shop Quần áo</a>
                            <a class="btn btn-outline-dark btn-lg" asp-controller="Product" asp-action="PhuKien">Shop Phụ kiện</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <img src="~/Images/demo/demo.webp" class="img-fluid rounded shadow" alt="Fashion 1" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Promo -->
<div class="promo-section">
    <div class="promo-left">
        <div class="promo-overlay"></div>
        <div class="promo-content">
            <div class="promo-title">GIẢM 50%</div>
            <div class="promo-desc">Thời trang Shop giảm từ 35% lên đến 50% đối với bộ sưu tập hè</div>
            <a class="promo-btn" asp-controller="Product" asp-action="PhuKien">XEM TẤT CẢ PHỤ KIỆN</a>
        </div>
    </div>
</div>

<!-- New Products -->
<div class="title">SẢN PHẨM MỚI</div>
<div class="products">
    @foreach (var p in Model.NewProducts)
    {
        <div class="product-card">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.ItemsId">
                <img src="~/Images/@p.Image" alt="@p.ItemsName" class="product-img" />
            </a>
            <div class="product-title">
                <a class="text-dark text-decoration-none"
                   asp-controller="Product" asp-action="Detail" asp-route-id="@p.ItemsId">@p.ItemsName</a>
            </div>
            <div class="product-price">@string.Format("{0:N0} đ", p.SellPrice)</div>
            <a class="product-btn" asp-controller="Product" asp-action="Detail" asp-route-id="@p.ItemsId">Buy Now</a>
        </div>
    }
</div>
<div class="text-center mt-3">
    <a class="product-btn" asp-controller="Product" asp-action="QuanAo">Xem thêm quần áo</a>
    <a class="product-btn ms-2" asp-controller="Product" asp-action="PhuKien">Xem thêm phụ kiện</a>
</div>

<!-- Hot Products -->
<div class="title">SẢN PHẨM BÁN CHẠY</div>
<div class="products">
    @foreach (var p in Model.HotProducts)
    {
        <div class="product-card">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.ItemsId">
                <img src="~/Images/@p.Image" alt="@p.ItemsName" class="product-img" />
            </a>
            <div class="product-title">
                <a class="text-dark text-decoration-none"
                   asp-controller="Product" asp-action="Detail" asp-route-id="@p.ItemsId">@p.ItemsName</a>
            </div>
            <div class="product-price">@string.Format("{0:N0} đ", p.SellPrice)</div>
            <a class="product-btn" asp-controller="Product" asp-action="Detail" asp-route-id="@p.ItemsId">Buy Now</a>
        </div>
    }
</div>
<div class="text-center mt-3">
    <a class="product-btn" asp-controller="Product" asp-action="QuanAo">Xem thêm quần áo</a>
    <a class="product-btn ms-2" asp-controller="Product" asp-action="PhuKien">Xem thêm phụ kiện</a>
</div>
@section Scripts {
    <script>
        (function(){
            const $input = $('#homeSearch');
            const $box   = $('#suggestBox');
            const $res   = $('#ajaxResults');
            let timer;

            function fmtPrice(n){ try{ return new Intl.NumberFormat('vi-VN').format(n) + ' đ'; }catch{return n+' đ';} }

            function renderSuggest(items){
                if(!items || items.length === 0){ $box.hide().empty(); return; }
                let html = '';
                items.forEach(i=>{
                    html += `
                    <a href="/Product/Detail/${i.id}" class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="${i.img}" onerror="this.src='/images/no-image.png'" class="me-2" style="width:44px;height:44px;object-fit:cover;border-radius:6px;">
                        <div>
                            <div class="fw-semibold">${i.name}</div>
                            <small class="text-muted">${fmtPrice(i.price)}</small>
                        </div>
                    </a>`;
                });
                // Xem tất cả kết quả
                const q = encodeURIComponent($input.val().trim());
                html += `<a href="javascript:void(0)" id="viewAll" class="list-group-item list-group-item-action text-center text-primary">Xem tất cả kết quả</a>`;
                $box.html(html).show();

                $('#viewAll').off('click').on('click', function(){
                    loadResults($input.val().trim());
                    $box.hide();
                });
            }

            function loadSuggest(q){
                if(!q){ $box.hide().empty(); return; }
                $.get('/Product/Suggest', { term: q })
                    .done(renderSuggest)
                    .fail(()=>{ $box.hide().empty(); });
            }

            function loadResults(q){
                $res.html('<div class="text-center text-muted py-3">Đang tải...</div>');
                $.get('/Product/AjaxSearch', { q: q })
                    .done(html=>{ $res.html(html); })
                    .fail(()=>{ $res.html('<div class="text-danger">Lỗi tải kết quả.</div>'); });
            }

            // gõ -> debounce gợi ý
            $input.on('input', function(){
                const q = this.value.trim();
                clearTimeout(timer);
                timer = setTimeout(()=> loadSuggest(q), 220);
            });

            // Enter -> load kết quả
            $input.on('keydown', function(e){
                if(e.key === 'Enter'){
                    e.preventDefault();
                    const q = this.value.trim();
                    loadResults(q);
                    $box.hide();
                }
            });

            // click ra ngoài đóng dropdown
            $(document).on('click', function(e){
                if(!$(e.target).closest('#suggestBox, #homeSearch').length){
                    $box.hide();
                }
            });
        })();
    </script>
}
