    </div>
</section>


<!-- New Products Section -->
<section class="new-products-section">
    <div class="container">
        <div class="section-title">
            <h2>Sản Phẩm Mới Nhất</h2>
            <p class="section-subtitle">Khám phá những sản phẩm mới nhất từ bộ sưu tập của chúng tôi</p>
        </div>

        <div class="product-grid">
            @foreach (var product in Model.NewProducts)
            {
                <div class="product-card">
                    <span class="product-badge">Mới</span>
                    <div class="product-image-wrapper">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ItemsId">
                            <img src="~/Images/Ao Polo co vanh.jpg" alt="@product.ItemsName" class="product-image">
                        </a>
                    </div>
                    <div class="product-body">
                        <span class="product-category">@product.Category?.NameCategory</span>
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ItemsId" class="product-title">@product.ItemsName</a>
                        <div class="product-price">@string.Format("{0:N0} ₫", product.SellPrice)</div>
                        <div class="product-actions">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ItemsId" class="product-btn product-btn-primary">
                                <i class="bi bi-bag-plus me-2"></i>Mua Ngay
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="see-more-container">
            <a asp-controller="Product" asp-action="QuanAo" class="see-more-btn">
                <i class="bi bi-grid me-2"></i>Xem Thêm Quần Áo
            </a>
            <a asp-controller="Product" asp-action="PhuKien" class="see-more-btn">
                <i class="bi bi-gem me-2"></i>Xem Thêm Phụ Kiện
            </a>
        </div>
    </div>
</section>

<!-- Hot Products Section -->
