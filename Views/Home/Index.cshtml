                    <a href="@Url.Action("QuanAo", "Product")" class="hero-btn hero-btn-primary">
                        <i class="bi bi-bag me-2"></i>Khám Phá Ngay
                    </a>
                    <a href="@Url.Action("PhuKien", "Product")" class="hero-btn hero-btn-outline">
                        <i class="bi bi-gem me-2"></i>Xem Phụ Kiện
