    <div class="container">
        <div class="section-title">
            <h2>Sản Phẩm Bán Chạy</h2>
            <p class="section-subtitle">Những sản phẩm được yêu thích nhất của chúng tôi</p>
        </div>

        <div class="product-grid">
            @foreach (var product in Model.HotProducts)
            {
                <div class="product-card">
                    <span class="product-badge" style="background-color: #ff6b6b;">Hot</span>
                    <div class="product-image-wrapper">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ItemsId">
                            <img src="~/Images/Ao Polo co vanh.jpg" alt="@product.ItemsName" class="product-image">
                        </a>
                    </div>
                    <div class="product-body">
                        <span class="product-category">@product.Category?.NameCategory</span>
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ItemsId" class="product-title">@product.ItemsName</a>
                        <div class="product-price">@string.Format("{0:N0} ₫", product.SellPrice)</div>
                        <div class="product-actions">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ItemsId" class="product-btn product-btn-primary">
                                <i class="bi bi-bag-plus me-2"></i>Mua Ngay
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="see-more-container">
            <a asp-controller="Product" asp-action="QuanAo" class="see-more-btn">
                <i class="bi bi-grid me-2"></i>Xem Thêm Quần Áo
            </a>
            <a asp-controller="Product" asp-action="PhuKien" class="see-more-btn">
                <i class="bi bi-gem me-2"></i>Xem Thêm Phụ Kiện
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function(){
            const $input = $('#homeSearch');
            const $box   = $('#suggestBox');
            const $res   = $('#ajaxResults');
            let timer;

            function fmtPrice(n){ try{ return new Intl.NumberFormat('vi-VN').format(n) + ' đ'; }catch{return n+' đ';} }

            function renderSuggest(items){
                if(!items || items.length === 0){ $box.hide().empty(); return; }
                let html = '';
                items.forEach(i=>{
                    html += `
                    <a href="/Product/Detail/${i.id}" class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="${i.img}" onerror="this.src='/images/no-image.png'" class="me-2" style="width:44px;height:44px;object-fit:cover;border-radius:6px;">
                        <div>
                            <div class="fw-semibold">${i.name}</div>
                            <small class="text-muted">${fmtPrice(i.price)}</small>
                        </div>
                    </a>`;
                });
                // Xem tất cả kết quả
                const q = encodeURIComponent($input.val().trim());
                html += `<a href="javascript:void(0)" id="viewAll" class="list-group-item list-group-item-action text-center text-primary">Xem tất cả kết quả</a>`;
                $box.html(html).show();

                $('#viewAll').off('click').on('click', function(){
                    loadResults($input.val().trim());
                    $box.hide();
                });
            }

            function loadSuggest(q){
                if(!q){ $box.hide().empty(); return; }
                $.get('/Product/Suggest', { term: q })
                    .done(renderSuggest)
                    .fail(()=>{ $box.hide().empty(); });
            }

            function loadResults(q){
                $res.html('<div class="text-center text-muted py-3">Đang tải...</div>');
                $.get('/Product/AjaxSearch', { q: q })
                    .done(html=>{ $res.html(html); })
                    .fail(()=>{ $res.html('<div class="text-danger">Lỗi tải kết quả.</div>'); });
            }

            // gõ -> debounce gợi ý
            $input.on('input', function(){
                const q = this.value.trim();
                clearTimeout(timer);
                timer = setTimeout(()=> loadSuggest(q), 220);
            });

            // Enter -> load kết quả
            $input.on('keydown', function(e){
                if(e.key === 'Enter'){
                    e.preventDefault();
                    const q = this.value.trim();
                    loadResults(q);
                    $box.hide();
                }
            });

            // click ra ngoài đóng dropdown
            $(document).on('click', function(e){
                if(!$(e.target).closest('#suggestBox, #homeSearch').length){
                    $box.hide();
                }
            });
        })();
    </script>
}
