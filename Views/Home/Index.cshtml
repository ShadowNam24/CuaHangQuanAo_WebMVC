        margin-bottom: 16px;
        letter-spacing: 2px;
    }

    .promo-desc {
        font-size: 1.2rem;
        margin-bottom: 32px;
        font-weight: 500;
    }

    .promo-timer {
        display: flex;
        justify-content: center;
        gap: 24px;
        margin-bottom: 32px;
    }

    .promo-timer-item {
        background: #fff;
        color: #222;
        border-radius: 8px;
        width: 110px;
        height: 110px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(44,62,80,0.10);
    }

    .promo-timer-value {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 4px;
    }

    .promo-timer-label {
        font-size: 1rem;
        font-weight: 500;
        color: #222;
    }

    .promo-btn {
