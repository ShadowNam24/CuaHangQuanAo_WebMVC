<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .fashion-hero {
        background-size: cover;
        color: #fff;
        padding: 80px 0;
        text-align: center;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(44, 62, 80, 0.12);
        margin-bottom: 40px;
        height: 550px;
    }

    #fashion-hero-carousel {
        background: linear-gradient(135deg, #FFFFFF 40%, #808080 100%);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(44, 62, 80, 0.12);
        margin-bottom: 40px;
        padding-top: 16px;
        padding-bottom: 16px;
    }

        #fashion-hero-carousel .carousel-item {
            min-height: 500px;
        }

        #fashion-hero-carousel h1,
        #fashion-hero-carousel p {
            animation: fadeInUp 1s ease;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .title {
        font-size: 1.6rem;
        font-weight: 700;
        text-align: center;
        margin: 48px auto 24px auto;
        letter-spacing: 1px;
        color: #000000;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(44, 62, 80, 0.12);
        padding: 12px 0;
        position: relative;
        overflow: hidden;
        max-width: 700px; /* Giới hạn bề ngang */
        width: 100%;
    }

        .title::after {
            content: "";
            display: block;
            width: 100px;
            height: 3px;
            background: #000000;
            margin: 5px auto 0 auto;
            border-radius: 2px;
            opacity: 0.7;
        }

    .products {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 32px;
        max-width: 1100px;
        margin: auto;
    }

    .product-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(44, 62, 80, 0.08);
        padding: 24px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 8px 32px rgba(44, 62, 80, 0.16);
        }

    .product-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        margin-bottom: 16px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.08);
    }

    .product-title {
        font-size: 1.15rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: #222;
    }

    .product-price {
        color: #e67e22;
        font-size: 1.05rem;
        font-weight: 700;
        margin-bottom: 12px;
    }

    .product-btn {
        background: #222;
        color: #fff;
        padding: 10px 24px;
        border: none;
        border-radius: 50px;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.08);
    }

        .product-btn:hover {
            background: #e67e22;
            color: #fff;
            transform: scale(1.08);
        }

    .fashion-cta {
        background: #f8f9fa;
        padding: 40px 0;
        text-align: center;
        border-radius: 16px;
        margin-top: 40px;
        box-shadow: 0 4px 16px rgba(44, 62, 80, 0.08);
    }

    /* Custom styles for carousel navigation buttons */
    .carousel-control-prev,
    .carousel-control-next {
        width: 60px;
        height: 60px;
        top: 50%;
        transform: translateY(-50%);
        background: #C0C0C0;
        border-radius: 50%;
        box-shadow: 0 4px 16px rgba(44, 62, 80, 0.16);
        opacity: 1;
        transition: background 0.3s, box-shadow 0.3s;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background: #e67e22;
            box-shadow: 0 8px 32px rgba(44, 62, 80, 0.24);
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-size: 60% 60%;
        filter: brightness(0) invert(1);
    }

    .promo-section {
        display: flex;
        align-items: stretch;
        justify-content: center;
        gap: 32px;
        margin: 48px 0;
    }

    .promo-left {
