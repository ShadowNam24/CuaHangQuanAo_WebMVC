@model CuaHangQuanAo.Entities.Storage
@{
    ViewData["Title"] = "Xóa phiếu nhập kho";
    Layout = "_AdminLayout";
}

<style>
    .delete-container {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .delete-header {
        background: linear-gradient(135deg, #FF416C 0%, #FF4B2B 100%);
        color: white;
        border-radius: 0.8rem 0.8rem 0 0;
        padding: 1.5rem;
    }

    .info-card {
        background-color: #f8f9fa;
        border-left: 4px solid #FF4B2B;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border-radius: 0.5rem;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #FF416C 0%, #FF4B2B 100%);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 50px;
        padding: 0.6rem 1.5rem;
        transition: all 0.2s;
    }

        .btn-danger-gradient:hover {
            background: linear-gradient(135deg, #e63a61 0%, #e64326 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .alert-icon {
        font-size: 4rem;
        color: #FF4B2B;
        opacity: 0.8;
    }

    .btn-action {
        border-radius: 50px;
        padding: 0.6rem 1.5rem;
        transition: all 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .warning-text {
        color: #dc3545;
        font-weight: 500;
    }

    .detail-row {
        display: flex;
        margin-bottom: 0.5rem;
    }

    .detail-label {
        min-width: 120px;
        font-weight: 500;
        color: #495057;
    }

    .detail-value {
        color: #212529;
    }

    .animated-pulse {
		animation: pulse 2s infinite;
    }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Storage/StockRefill">Danh sách nhập kho</a></li>
            <li class="breadcrumb-item active" aria-current="page">Xóa phiếu nhập #@Model.StorageId</li>
        </ol>
    </nav>

    <div class="delete-container">
        <div class="delete-header">
            <h2 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận xóa
            </h2>
            <p class="mb-0 text-white-50">Bạn đang chuẩn bị xóa phiếu nhập kho #@Model.StorageId</p>
        </div>

        <div class="p-4">
            <div class="text-center mb-4">
                <i class="bi bi-exclamation-diamond-fill alert-icon animated-pulse"></i>
                <h4 class="mt-3 mb-2">Bạn chắc chắn muốn xóa phiếu nhập kho này?</h4>
                <p class="text-muted mb-0">Hành động này không thể hoàn tác và sẽ xóa vĩnh viễn dữ liệu.</p>
                <p class="warning-text mt-2">Tất cả thông tin liên quan đến phiếu nhập này sẽ bị xóa khỏi hệ thống.</p>
            </div>

            <div class="info-card">
                <h5 class="mb-3">Thông tin phiếu nhập kho</h5>

                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-row">
                            <span class="detail-label">Mã phiếu:</span>
                            <span class="detail-value">#@Model.StorageId</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Ngày nhập:</span>
                            <span class="detail-value">@Model.ImportDate?.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Nhà cung cấp:</span>
                            <span class="detail-value">@(Model.Supplier?.SupplierName ?? "Chưa có thông tin")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-row">
                            <span class="detail-label">Sản phẩm:</span>
                            <span class="detail-value">@(Model.Items?.ItemsName ?? "Chưa có thông tin")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Số lượng:</span>
                            <span class="detail-value">@Model.Quantity</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Chi phí nhập:</span>
                            <span class="detail-value fw-bold">@string.Format("{0:N0} đ", Model.ImportCost)</span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-controller="Storage" asp-action="Functions_DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.StorageId" />

                <div class="border-top pt-4 d-flex justify-content-between">
                    <a href="/Storage/StockRefill" class="btn btn-outline-secondary btn-action">
                        <i class="bi bi-arrow-left me-1"></i> Hủy & quay lại
                    </a>
                    <button type="submit" class="btn btn-danger-gradient">
                        <i class="bi bi-trash me-1"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
