@model CuaHangQuanAo.Entities.Storage
@{
    ViewData["Title"] = "Sửa phiếu nhập kho";
    Layout = "_AdminLayout";
}

<style>
    .form-container {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .form-header {
        background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
        color: white;
        border-radius: 0.8rem 0.8rem 0 0;
        padding: 1.5rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #FF9500;
        box-shadow: 0 0 0 0.25rem rgba(255, 149, 0, 0.25);
    }

    .btn-gradient {
        background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 50px;
        padding: 0.6rem 1.5rem;
        transition: all 0.2s;
        min-width: 160px;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #e88700 0%, #e95435 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .section-title {
        position: relative;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            height: 2px;
            width: 50px;
            background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
        }

    .input-group-text {
        background-color: #f8f9fa;
    }

    .btn-action {
        border-radius: 50px;
        padding: 0.6rem 1.5rem;
        transition: all 0.2s;
        min-width: 160px;
        text-align: center;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    /* Styles cho phần upload hình ảnh */
    .image-upload-container {
        border: 2px dashed #ccc;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s;
        margin-bottom: 1rem;
        background-color: #f8f9fa;
        cursor: pointer;
    }

        .image-upload-container:hover {
            border-color: #FF9500;
        }

    .image-preview {
        max-width: 100%;
        max-height: 200px;
        margin-top: 10px;
        border-radius: 5px;
        display: block;
    }

    .upload-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .current-image-container {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
        background-color: #fff;
    }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Storage/StockRefill">Danh sách nhập kho</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sửa phiếu nhập #@Model.StorageId</li>
        </ol>
    </nav>

    <div class="form-container">
        <div class="form-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa phiếu nhập kho
                    </h2>
                    <p class="mb-0 text-white-50">Cập nhật thông tin phiếu nhập kho #@Model.StorageId</p>
                </div>
                <a href="/Storage/Functions/Delete/@Model.StorageId" class="btn btn-light btn-action">
                    <i class="bi bi-trash me-1"></i> Xóa phiếu
                </a>
            </div>
        </div>

        <div class="p-4">
            <form asp-controller="Storage" asp-action="Functions_Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="StorageId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="section-title">Thông tin cơ bản</h5>

                        <div class="mb-3">
                            <label asp-for="SupplierId" class="form-label">
                                <i class="bi bi-building me-1"></i> Nhà cung cấp
                            </label>
                            <select asp-for="SupplierId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Suppliers ?? new List<dynamic>(), "SupplierId", "SupplierName"))">
                                <option value="">-- Chọn nhà cung cấp --</option>
                            </select>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImportDate" class="form-label">
                                <i class="bi bi-calendar me-1"></i> Ngày nhập
                            </label>
                            <input asp-for="ImportDate" class="form-control" type="date" value="@(Model.ImportDate?.ToString("yyyy-MM-dd"))" />
                            <span asp-validation-for="ImportDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="section-title">Chi tiết sản phẩm</h5>

                        <div class="mb-3">
                            <label asp-for="ProductVariantsId" class="form-label">
                                <i class="bi bi-box-seam me-1"></i> Sản phẩm
                            </label>
                            <select asp-for="ProductVariantsId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.ProductVariants, "ProductVariantsId", "DisplayName"))">
                                <option value="">-- Chọn sản phẩm --</option>
                            </select>
                            <span asp-validation-for="ProductVariantsId" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">
                                <i class="bi bi-123 me-1"></i> Số lượng
                            </label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImportCost" class="form-label">
                                <i class="bi bi-cash me-1"></i> Chi phí nhập
                            </label>
                            <div class="input-group">
                                <input asp-for="ImportCost" class="form-control" type="number" min="0" />
                                <span class="input-group-text">VNĐ</span>
                            </div>
                            <span asp-validation-for="ImportCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Phần Upload Hình Ảnh -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="section-title">
                            <i class="bi bi-image me-2"></i>Hình ảnh sản phẩm
                        </h5>

                        @if (ViewBag.CurrentImage != null)
                        {
                            <div class="current-image-container mb-3">
                                <p class="mb-2 fw-bold">Ảnh sản phẩm hiện tại:</p>
                                <img src="@ViewBag.CurrentImage" alt="Ảnh sản phẩm" class="image-preview mb-2" id="current-image" />
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" id="removeImage" name="RemoveImage">
                                    <label class="form-check-label" for="removeImage">
                                        Xóa ảnh hiện tại
                                    </label>
                                </div>
                            </div>
                        }

                        <div class="image-upload-container" id="image-upload-container">
                            <i class="bi bi-cloud-arrow-up upload-icon"></i>
                            <p>Nhấp để tải lên hoặc kéo và thả ảnh vào đây</p>
                            <p class="text-muted small">Định dạng: JPG, PNG, JPEG. Kích thước tối đa: 2MB</p>
                            <input type="file" name="ImageFile" id="image-upload" class="d-none" accept="image/png, image/jpeg, image/jpg" />
                        </div>
                        <img id="image-preview" class="image-preview" src="#" alt="Xem trước ảnh" style="display: none;" />
                        <span id="image-error" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Nút điều hướng -->
                <div class="border-top pt-4 d-flex justify-content-between align-items-center">
                    <a href="/Storage/StockRefill" class="btn btn-outline-secondary btn-action">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-gradient">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Xử lý upload hình ảnh
            $('#image-upload-container').click(function() {
                $('#image-upload').click();
            });

            $('#image-upload').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();

                    // Kiểm tra kích thước file (tối đa 2MB)
                    if (file.size > 2 * 1024 * 1024) {
                        $('#image-error').text('Kích thước tệp quá lớn. Vui lòng chọn tệp nhỏ hơn 2MB.');
                        $('#image-preview').hide();
                        return;
                    }

                    // Kiểm tra loại file
                    const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!validTypes.includes(file.type)) {
                        $('#image-error').text('Chỉ chấp nhận các định dạng JPG, JPEG hoặc PNG.');
                        $('#image-preview').hide();
                        return;
                    }

                    $('#image-error').text('');
                    reader.onload = function(e) {
                        $('#image-preview').attr('src', e.target.result);
                        $('#image-preview').show();
                    }

                    reader.readAsDataURL(file);
                }
            });

            // Chức năng kéo và thả
            $('#image-upload-container').on('dragover', function(e) {
                e.preventDefault();
                $(this).css('background-color', '#e9ecef');
            });

            $('#image-upload-container').on('dragleave', function(e) {
                e.preventDefault();
                $(this).css('background-color', '#f8f9fa');
            });

            $('#image-upload-container').on('drop', function(e) {
                e.preventDefault();
                $(this).css('background-color', '#f8f9fa');

                const file = e.originalEvent.dataTransfer.files[0];
                if (file) {
                    $('#image-upload')[0].files = e.originalEvent.dataTransfer.files;
                    $('#image-upload').trigger('change');
                }
            });

            // Xử lý khi chọn "Xóa ảnh hiện tại"
            $("#removeImage").change(function() {
                if($(this).is(":checked")) {
                    $("#current-image").css("opacity", "0.3");
                } else {
                    $("#current-image").css("opacity", "1");
                }
            });
        });
    </script>
}
