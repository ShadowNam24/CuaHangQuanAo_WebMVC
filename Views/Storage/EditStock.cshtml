@model CuaHangQuanAo.Entities.Storage
@{
    ViewData["Title"] = "Sửa phiếu nhập kho";
	Layout = "_AdminLayout";
}

<style>
    .form-container {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .form-header {
        background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
        color: white;
        border-radius: 0.8rem 0.8rem 0 0;
        padding: 1.5rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #FF9500;
        box-shadow: 0 0 0 0.25rem rgba(255, 149, 0, 0.25);
    }

    .btn-gradient {
        background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 50px;
        padding: 0.6rem 1.5rem;
        transition: all 0.2s;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #e88700 0%, #e95435 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .section-title {
        position: relative;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            height: 2px;
            width: 50px;
            background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
        }

    .input-group-text {
        background-color: #f8f9fa;
    }

    .btn-action {
        border-radius: 50px;
        padding: 0.6rem 1.5rem;
        transition: all 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Storage/StockRefill">Danh sách nhập kho</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sửa phiếu nhập #@Model.StorageId</li>
        </ol>
    </nav>

    <div class="form-container">
        <div class="form-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa phiếu nhập kho
                    </h2>
                    <p class="mb-0 text-white-50">Cập nhật thông tin phiếu nhập kho #@Model.StorageId</p>
                </div>
                <a href="/Storage/Functions/Delete/@Model.StorageId" class="btn btn-light btn-action">
                    <i class="bi bi-trash me-1"></i> Xóa phiếu
                </a>
            </div>
        </div>

        <div class="p-4">
            <form asp-controller="Storage" asp-action="Functions_Edit" method="post">
                <input type="hidden" asp-for="StorageId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="section-title">Thông tin cơ bản</h5>

                        <div class="mb-3">
                            <label asp-for="SupplierId" class="form-label">
                                <i class="bi bi-building me-1"></i> Nhà cung cấp
                            </label>
                            <select asp-for="SupplierId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Suppliers ?? new List<dynamic>(), "SupplierId", "SupplierName"))">
                                <option value="">-- Chọn nhà cung cấp --</option>
                            </select>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImportDate" class="form-label">
                                <i class="bi bi-calendar me-1"></i> Ngày nhập
                            </label>
                            <input asp-for="ImportDate" class="form-control" type="date" value="@(Model.ImportDate?.ToString("yyyy-MM-dd"))" />
                            <span asp-validation-for="ImportDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="section-title">Chi tiết sản phẩm</h5>

                        <div class="mb-3">
                            <label asp-for="ProductVariantsId" class="form-label">
                                <i class="bi bi-box-seam me-1"></i> Sản phẩm
                            </label>
                            <select asp-for="ProductVariantsId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.ProductVariants, "ProductVariantsId", "DisplayName"))">
                                <option value="">-- Chọn sản phẩm --</option>
                            </select>
                            <span asp-validation-for="ProductVariantsId" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">
                                <i class="bi bi-123 me-1"></i> Số lượng
                            </label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImportCost" class="form-label">
                                <i class="bi bi-cash me-1"></i> Chi phí nhập
                            </label>
                            <div class="input-group">
                                <input asp-for="ImportCost" class="form-control" type="number" min="0" />
                                <span class="input-group-text">VNĐ</span>
                            </div>
                            <span asp-validation-for="ImportCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="border-top pt-4 d-flex justify-content-between">
                    <a href="/Storage/StockRefill" class="btn btn-outline-secondary btn-action">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-gradient">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Auto calculate ImportCost based on quantity * unit price if needed
            $("#Quantity").change(function() {
                calculateTotal();
            });

            function calculateTotal() {
                // Add your calculation logic here if needed
            }
        });
    </script>
}