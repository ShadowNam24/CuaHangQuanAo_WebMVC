@model IEnumerable<CuaHangQuanAo.Entities.Item>
@{
    ViewData["Title"] = "Quần áo";
}
<h2 class="mb-3">Quần áo</h2>

<form method="get" class="row g-2 mb-3" id="filterFormQuanAo">
    <div class="col-auto">
        <input name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Tìm tên sản phẩm..." />
    </div>
    <div class="col-auto">
        <select name="categoryId" id="categoryIdQuanAo" class="form-select">
            <option value="">-- Tất cả danh mục --</option>
            <option value="1">BST Vest Nam 2025</option>
            <option value="2">Suit Luxury</option>
            <option value="3">Quần Tây</option>
            <option value="4">Áo Polo</option>
            <option value="5">Sơ Mi</option>
            <option value="6">Sơ Mi tay ngắn</option>
            <option value="7">Áo Thun</option>
        </select>
        <input type="hidden" name="categorySlug" id="categorySlugQuanAo" value="@Context.Request.Query["categorySlug"]" />
    </div>
    <div class="col-auto">
        <input type="number" name="minPrice" value="@Context.Request.Query["minPrice"]" class="form-control" placeholder="Giá từ" min="0" />
    </div>
    <div class="col-auto">
        <input type="number" name="maxPrice" value="@Context.Request.Query["maxPrice"]" class="form-control" placeholder="đến" min="0" />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">Lọc</button>
    </div>
</form>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Danh mục</th>
            <th>Size</th>
            <th class="text-end">Giá bán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.ItemsId</td>
                <td>@i.ItemsName</td>
                <td>@i.Category?.NameCategory</td>
                <td class="text-end">@String.Format("{0:N0} đ", i.SellPrice)</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var select = document.getElementById('categoryIdQuanAo');
            var hidden = document.getElementById('categorySlugQuanAo');

            function mapSlug(id) {
                // map numeric IDs used in QuanAo to slugs
                switch (parseInt(id)) {
                    case 1: return 'BST-vest-nam-2025'.toLowerCase();
                    case 2: return 'suit-luxury'.toLowerCase();
                    case 3: return 'quan-tay'.toLowerCase();
                    case 4: return 'ao-polo'.toLowerCase();
                    case 5: return 'so-mi'.toLowerCase();
                    case 6: return 'so-mi-tay-ngan'.toLowerCase();
                    case 7: return 'ao-thun'.toLowerCase();
                    default: return '';
                }
            }

            select.addEventListener('change', function() {
                hidden.value = mapSlug(this.value);
            });

            // initialize
            hidden.value = mapSlug(select.value);
        });
    </script>
}
