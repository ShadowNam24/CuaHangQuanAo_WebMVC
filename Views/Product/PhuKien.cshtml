@model IEnumerable<CuaHangQuanAo.Entities.Item>
@{
    ViewData["Title"] = "Phụ kiện";
}
<h2 class="mb-3">Phụ kiện</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Tìm phụ kiện..." />
    </div>
    <div class="col-auto">
        <select name="categoryId" class="form-select">
            <option value="">-- Tất cả --</option>
            <option value="8">Giày da</option>
            <option value="9">Thắt lưng</option>
        </select>
    </div>
    <div class="col-auto">
        <input type="number" name="minPrice" value="@Context.Request.Query["minPrice"]" class="form-control" placeholder="Giá từ" min="0" />
    </div>
    <div class="col-auto">
        <input type="number" name="maxPrice" value="@Context.Request.Query["maxPrice"]" class="form-control" placeholder="đến" min="0" />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">Lọc</button>
    </div>
</form>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Loại</th>
            <th>Size</th>
            <th class="text-end">Giá bán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.ItemsId</td>
                <td>@i.ItemsName</td>
                <td>@i.Category?.NameCategory</td>
                <td>@i.Size</td>
                <td class="text-end">@String.Format("{0:N0} đ", i.SellPrice)</td>
            </tr>
        }
    </tbody>
</table>
