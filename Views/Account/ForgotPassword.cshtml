@model CuaHangQuanAo.Models.ForgotPasswordVM
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_AuthenLayout";
}

<style>
    .forgot-wrap {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg,#f9fafb 0%,#f3f4f6 50%,#e5e7eb 100%);
        padding: 2rem 1rem;
    }

    .forgot-card {
        width: 100%;
        max-width: 640px;
        border: 0;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,.12);
        animation: fadeUp .6s ease;
    }

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .card-header {
        background: #111827;
        color: #fff;
    }

    .input-group-text {
        background: #fff;
        border-color: #e5e7eb;
    }

    .form-control {
        border-color: #e5e7eb;
    }

        .form-control:focus {
            box-shadow: 0 0 0 .25rem rgba(230,126,34,.15);
            border-color: #e67e22;
        }

    .btn-primary {
        background: #111827;
        border-color: #111827;
        border-radius: 12px;
        padding: .85rem 1rem;
        font-weight: 700;
        letter-spacing: .3px;
    }

        .btn-primary:hover {
            background: #e67e22;
            border-color: #e67e22;
        }

    .help {
        color: #6b7280;
        font-size: .95rem;
    }
</style>

<div class="forgot-wrap">
    <div class="card forgot-card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-envelope-check me-2"></i>Xác minh email</h5>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <p class="help mb-3">
                Nhập địa chỉ email của bạn. Chúng tôi sẽ gửi một liên kết để đặt lại mật khẩu.
            </p>

            <form asp-action="ForgotPassword" method="post" novalidate id="forgotForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-at"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <span class="btn-text"><i class="bi bi-send me-1"></i> Gửi email xác minh</span>
                        <span class="spinner-border spinner-border-sm d-none" id="btnSpinner" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center">
            <p class="mb-1">Nhớ mật khẩu rồi? <a asp-action="Login">Đăng nhập</a></p>
            <p class="mb-0">Chưa có tài khoản? <a asp-action="Register">Đăng ký</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Hiệu ứng nút khi submit
        (function(){
            const form = document.getElementById('forgotForm');
            const btn = document.getElementById('submitBtn');
            const spinner = document.getElementById('btnSpinner');
            const text = btn.querySelector('.btn-text');

            form?.addEventListener('submit', function(){
                btn.disabled = true;
                spinner.classList.remove('d-none');
                text.classList.add('opacity-75');
            });
        })();
    </script>
}
