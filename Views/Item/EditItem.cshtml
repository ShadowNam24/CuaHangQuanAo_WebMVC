@model CuaHangQuanAo.Entities.Item
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "_AdminLayout";
}

<style>
    .edit-container {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .edit-header {
        background: linear-gradient(135deg, #4B0082 0%, #9370DB 100%);
        color: white;
        border-radius: 0.8rem 0.8rem 0 0;
        padding: 1.5rem;
    }

    .form-section {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e9ecef;
    }

    .section-title {
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e9ecef;
        color: #4B0082;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .btn-action {
        border-radius: 50px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #4B0082;
    }

    .alert-info {
        border-left: 4px solid #0dcaf0;
        background-color: #f8f9fa;
    }

    .badge-id {
        background-color: #212529;
        color: white;
        border-radius: 4px;
        padding: 0.25rem 0.6rem;
        font-weight: 500;
    }

    /* Image Upload Styles */
    .image-upload-container {
        border: 2px dashed #ccc;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s;
        cursor: pointer;
        background-color: #fff;
    }

        .image-upload-container:hover {
            border-color: #9370DB;
            background-color: #f8f9fa;
        }

    .upload-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .image-preview {
        max-width: 100%;
        max-height: 300px;
        margin-top: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .current-image-container {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        background-color: #fff;
        text-align: center;
    }

        .current-image-container img {
            max-width: 100%;
            max-height: 300px;
            border-radius: 8px;
        }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Items", "Item")">Danh sách sản phẩm</a></li>
            @if (ViewBag.ReturnUrl == "ItemDetails")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("ItemDetails", "Item", new { id = Model.ItemsId })">Chi tiết sản phẩm</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa sản phẩm</li>
        </ol>
    </nav>

    <div class="edit-container">
        <div class="edit-header">
            <h2 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa sản phẩm
            </h2>
            <p class="mb-0 text-white-50">
                Cập nhật thông tin sản phẩm <span class="badge-id">#@Model.ItemsId</span>
            </p>
        </div>

        <div class="p-4">
            <!-- Hiển thị thông báo lỗi/thành công -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="EditItems" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ItemsId" />
                <input type="hidden" asp-for="CoverImage" id="currentCoverImage" />

                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-info-circle me-2"></i>Thông tin sản phẩm
                    </h4>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="ItemsName" class="form-control" placeholder="Tên sản phẩm" required />
                                <label asp-for="ItemsName">Tên sản phẩm</label>
                                <span asp-validation-for="ItemsName" class="validation-message"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.CategoryId" selected="@(category.CategoryId == Model.CategoryId)">
                                            @category.NameCategory
                                        </option>
                                    }
                                </select>
                                <label asp-for="CategoryId">Danh mục sản phẩm</label>
                                <span asp-validation-for="CategoryId" class="validation-message"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="SellPrice" type="number" class="form-control" placeholder="Giá bán" min="0" required />
                                <label asp-for="SellPrice">Giá bán (VNĐ)</label>
                                <span asp-validation-for="SellPrice" class="validation-message"></span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3" role="alert">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Lưu ý:</strong> Để thay đổi số lượng sản phẩm trong kho, vui lòng sử dụng chức năng Nhập kho.
                    </div>
                </div>

                <!-- Phần Upload Ảnh Bìa -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-image me-2"></i>Hình ảnh bìa sản phẩm
                    </h4>

                    @if (!string.IsNullOrEmpty(Model.CoverImage))
                    {
                        <div class="current-image-container mb-3">
                            <p class="mb-2 fw-bold">Ảnh bìa hiện tại:</p>
                            <img src="@Url.Content("~/Images/products/" + Model.CoverImage)" 
                                 alt="@Model.ItemsName" 
                                 id="currentImage"
                                 onerror="this.onerror=null;this.src='@Url.Content("~/Images/demo/demo.webp")'" />
                            <div class="form-check mt-3">
                                <input class="form-check-input" type="checkbox" id="removeCoverImage" name="RemoveCoverImage">
                                <label class="form-check-label" for="removeCoverImage">
                                    <i class="bi bi-trash text-danger"></i> Xóa ảnh bìa hiện tại
                                </label>
                            </div>
                        </div>
                    }

                    <div class="image-upload-container" id="imageUploadContainer">
                        <i class="bi bi-cloud-arrow-up upload-icon"></i>
                        <p class="mb-1 fw-bold">Nhấp để tải lên ảnh bìa mới</p>
                        <p class="text-muted small mb-0">Hoặc kéo và thả ảnh vào đây</p>
                        <p class="text-muted small">Định dạng: JPG, PNG, WEBP. Kích thước tối đa: 5MB</p>
                        <input type="file" 
                               name="CoverImageFile" 
                               id="coverImageUpload" 
                               class="d-none" 
                               accept="image/png, image/jpeg, image/jpg, image/webp" />
                    </div>
                    <img id="imagePreview" class="image-preview" src="#" alt="Preview" style="display: none;" />
                    <span id="imageError" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    @{
                        var returnUrl = ViewBag.ReturnUrl;
                        if (returnUrl == "ItemDetails")
                        {
                            <a href="@Url.Action("ItemDetails", "Item", new { id = Model.ItemsId })" class="btn btn-outline-secondary btn-action">
                                <i class="bi bi-x-circle me-2"></i>Hủy
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Items", "Item")" class="btn btn-outline-secondary btn-action">
                                <i class="bi bi-x-circle me-2"></i>Hủy
                            </a>
                        }
                    }
                    <button type="submit" class="btn btn-primary btn-action">
                        <i class="bi bi-save me-2"></i>Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Validation for SellPrice
            $('#SellPrice').on('input', function() {
                var value = $(this).val();
                if (value < 0) {
                    $(this).val(0);
                }
            });

            // Image Upload Handling
            $('#imageUploadContainer').click(function() {
                $('#coverImageUpload').click();
            });

            $('#coverImageUpload').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();

                    // Validate file size (5MB maximum)
                    if (file.size > 5 * 1024 * 1024) {
                        $('#imageError').text('Kích thước tệp quá lớn. Vui lòng chọn tệp nhỏ hơn 5MB.');
                        $('#imagePreview').hide();
                        return;
                    }

                    // Validate file type
                    const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
                    if (!validTypes.includes(file.type)) {
                        $('#imageError').text('Chỉ chấp nhận các định dạng JPG, JPEG, PNG hoặc WEBP.');
                        $('#imagePreview').hide();
                        return;
                    }

                    $('#imageError').text('');
                    reader.onload = function(e) {
                        $('#imagePreview').attr('src', e.target.result);
                        $('#imagePreview').show();
                        $('#currentImage').css('opacity', '0.5');
                    }

                    reader.readAsDataURL(file);
                }
            });

            // Drag and Drop functionality
            $('#imageUploadContainer').on('dragover', function(e) {
                e.preventDefault();
                $(this).css('border-color', '#9370DB');
                $(this).css('background-color', '#f8f9fa');
            });

            $('#imageUploadContainer').on('dragleave', function(e) {
                e.preventDefault();
                $(this).css('border-color', '#ccc');
                $(this).css('background-color', '#fff');
            });

            $('#imageUploadContainer').on('drop', function(e) {
                e.preventDefault();
                $(this).css('border-color', '#ccc');
                $(this).css('background-color', '#fff');

                const file = e.originalEvent.dataTransfer.files[0];
                if (file) {
                    $('#coverImageUpload')[0].files = e.originalEvent.dataTransfer.files;
                    $('#coverImageUpload').trigger('change');
                }
            });

            // Handle remove image checkbox
            $('#removeCoverImage').change(function() {
                if($(this).is(':checked')) {
                    $('#currentImage').css('opacity', '0.3');
                } else {
                    $('#currentImage').css('opacity', '1');
                }
            });
        });
    </script>
}

