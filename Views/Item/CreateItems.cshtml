@model CuaHangQuanAo.Entities.Item
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "_AdminLayout";
}

<style>
    .create-container {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .create-header {
        background: linear-gradient(135deg, #4B0082 0%, #9370DB 100%);
        color: white;
        border-radius: 0.8rem 0.8rem 0 0;
        padding: 1.5rem;
    }

    .form-section {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e9ecef;
    }

    .section-title {
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e9ecef;
        color: #4B0082;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .btn-action {
        border-radius: 50px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #4B0082;
    }

    .alert-info {
        border-left: 4px solid #0dcaf0;
        background-color: #f8f9fa;
    }

    /* Styles for image upload */
    .image-upload-container {
        border: 2px dashed #ccc;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s;
        margin-bottom: 1rem;
        background-color: #f8f9fa;
    }

        .image-upload-container:hover {
            border-color: #9370DB;
        }

    .image-preview {
        max-width: 100%;
        max-height: 200px;
        margin-top: 10px;
        border-radius: 5px;
        display: none;
    }

    .upload-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .modal-header {
        background: linear-gradient(135deg, #4B0082 0%, #9370DB 100%);
        color: white;
    }

    .modal-title {
        font-weight: 600;
    }

    .btn-add-category {
        font-size: 1.2rem;
        cursor: pointer;
        color: #4B0082;
        transition: all 0.2s;
    }

        .btn-add-category:hover {
            color: #9370DB;
    }
</style>
<div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="categoryModalLabel">Thêm danh mục sản phẩm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="categoryModalAlert" class="alert d-none" role="alert"></div>
                <div class="mb-3">
                    <label for="categoryName" class="form-label">Tên danh mục</label>
                    <input type="text" class="form-control" id="categoryName" placeholder="Nhập tên danh mục sản phẩm">
                    <div class="invalid-feedback">
                        Vui lòng nhập tên danh mục.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="btnSaveCategory" class="btn btn-primary">
                    <span id="btnSaveCategoryText">Lưu danh mục</span>
                    <span id="btnSaveCategorySpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Category Modal -->
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Items", "Item")">Danh sách sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm sản phẩm mới</li>
        </ol>
    </nav>

    <div class="create-container">
        <div class="create-header">
            <h2 class="mb-0">
                <i class="bi bi-box-seam me-2"></i>Thêm sản phẩm mới
            </h2>
            <p class="mb-0 text-white-50">Nhập thông tin chi tiết cho sản phẩm</p>
        </div>

        <div class="p-4">
            <form asp-action="CreateItems" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-info-circle me-2"></i>Thông tin sản phẩm
                    </h4>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="ItemsName" class="form-control" placeholder="Tên sản phẩm" required />
                                <label asp-for="ItemsName">Tên sản phẩm</label>
                                <span asp-validation-for="ItemsName" class="validation-message"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 d-flex">
                                <select asp-for="CategoryId" id="CategoryId" class="form-select" required>
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.CategoryId">@category.NameCategory</option>
                                    }
                                </select>
                                <label asp-for="CategoryId">Danh mục sản phẩm</label>
                                <button type="button" class="btn btn-link ms-2 p-0 mt-2" id="btnAddCategory"
                                        data-bs-toggle="modal" data-bs-target="#categoryModal" title="Thêm danh mục mới">
                                    <i class="bi bi-plus-circle-fill btn-add-category"></i>
                                </button>
                                <span asp-validation-for="CategoryId" class="validation-message"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="SellPrice" type="number" class="form-control" placeholder="Giá bán" min="0" required />
                                <label asp-for="SellPrice">Giá bán (VNĐ)</label>
                                <span asp-validation-for="SellPrice" class="validation-message"></span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3" role="alert">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Lưu ý:</strong> Sau khi tạo sản phẩm, bạn có thể thêm số lượng vào kho thông qua chức năng Nhập kho.
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Items", "Item")" class="btn btn-outline-secondary btn-action">
                        <i class="bi bi-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary btn-action">
                        <i class="bi bi-save me-2"></i>Lưu sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Validation for SellPrice
            $('#SellPrice').on('input', function() {
                var value = $(this).val();
                if (value < 0) {
                    $(this).val(0);
                }
            });

            // Image upload handling
            $('#image-upload-container').click(function() {
                $('#image-upload').click();
            });

            $('#image-upload').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();

                    // Validate file size (2MB maximum)
                    if (file.size > 2 * 1024 * 1024) {
                        $('#image-error').text('Kích thước tệp quá lớn. Vui lòng chọn tệp nhỏ hơn 2MB.');
                        $('#image-preview').hide();
                        return;
                    }

                    // Validate file type
                    const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!validTypes.includes(file.type)) {
                        $('#image-error').text('Chỉ chấp nhận các định dạng JPG, JPEG hoặc PNG.');
                        $('#image-preview').hide();
                        return;
                    }

                    $('#image-error').text('');
                    reader.onload = function(e) {
                        $('#image-preview').attr('src', e.target.result);
                        $('#image-preview').show();
                    }

                    reader.readAsDataURL(file);
                }
            });

            // Drag and drop functionality
            $('#image-upload-container').on('dragover', function(e) {
                e.preventDefault();
                $(this).css('background-color', '#e9ecef');
            });

            $('#image-upload-container').on('dragleave', function(e) {
                e.preventDefault();
                $(this).css('background-color', '#f8f9fa');
            });

            $('#image-upload-container').on('drop', function(e) {
                e.preventDefault();
                $(this).css('background-color', '#f8f9fa');

                const file = e.originalEvent.dataTransfer.files[0];
                if (file) {
                    $('#image-upload')[0].files = e.originalEvent.dataTransfer.files;
                    $('#image-upload').trigger('change');
                }
            });

            // Category modal handling
            $('#categoryModal').on('shown.bs.modal', function () {
                $('#categoryName').focus();
                $('#categoryModalAlert').addClass('d-none');
                $('#categoryName').val('');
                $('#categoryName').removeClass('is-invalid');
            });

            // Save category button
            $('#btnSaveCategory').click(function() {
                const categoryName = $('#categoryName').val().trim();

                if (!categoryName) {
                    $('#categoryName').addClass('is-invalid');
                    return;
                }

                $('#categoryName').removeClass('is-invalid');

                // Show loading state
                $('#btnSaveCategoryText').addClass('d-none');
                $('#btnSaveCategorySpinner').removeClass('d-none');
                $('#btnSaveCategory').attr('disabled', true);

                // AJAX request to create category
                $.ajax({
                    url: '@Url.Action("CreateCategory", "Item")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ NameCategory: categoryName }),
                    success: function(response) {
                        if (response.success) {
                            // Show success message
                            $('#categoryModalAlert')
                                .removeClass('d-none alert-danger')
                                .addClass('alert-success')
                                .text(response.message);

                            // Update the category dropdown
                            const $categorySelect = $('#CategoryId');
                            $categorySelect.empty();
                            $categorySelect.append($('<option>', {
                                value: '',
                                text: '-- Chọn danh mục --'
                            }));

                            $.each(response.categories, function (i, category) {
                                $categorySelect.append($('<option>', {
                                    value: category.categoryId,
                                    text: category.nameCategory
                                }));
                            });

                            // Select the newly created category
                            $categorySelect.val(response.newCategory.categoryId);

                            // Close the modal after a delay
                            setTimeout(function() {
                                $('#categoryModal').modal('hide');
                            }, 1500);
                        } else {
                            $('#categoryModalAlert')
                                .removeClass('d-none alert-success')
                                .addClass('alert-danger')
                                .text(response.message);
                        }
                    },
                    error: function(xhr) {
                        let errorMsg = 'Đã xảy ra lỗi khi tạo danh mục';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }
                        $('#categoryModalAlert')
                            .removeClass('d-none alert-success')
                            .addClass('alert-danger')
                            .text(errorMsg);
                    },
                    complete: function() {
                        // Reset button state
                        $('#btnSaveCategoryText').removeClass('d-none');
                        $('#btnSaveCategorySpinner').addClass('d-none');
                        $('#btnSaveCategory').attr('disabled', false);
                    }
                });
            });

            // Allow Enter key to submit the category form
            $('#categoryName').keypress(function(event) {
                if (event.which === 13) {
                    event.preventDefault();
                    $('#btnSaveCategory').click();
                }
            });
        });
    </script>
}